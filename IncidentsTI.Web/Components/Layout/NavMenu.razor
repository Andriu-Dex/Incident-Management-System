<div class="bg-blue-600 text-white p-4">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Incidentes TI</h2>
    </div>
    
    <AuthorizeView>
        <Authorized>
            <nav class="space-y-2">
                <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                         href="" Match="NavLinkMatch.All">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    Inicio
                </NavLink>

                <AuthorizeView Roles="Administrator" Context="adminContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="admin/users">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            Usuarios
                        </NavLink>
                    </Authorized>
                </AuthorizeView>

                <!-- Incidentes (Todos los usuarios autenticados) -->
                <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                         href="incidents">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                    </svg>
                    Mis Incidentes
                </NavLink>

                <!-- Dashboard Técnico -->
                <AuthorizeView Roles="Technician,Administrator" Context="techContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="technician/dashboard">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                            </svg>
                            Dashboard Técnico
                        </NavLink>
                    </Authorized>
                </AuthorizeView>

                <!-- Gestión de Incidentes (Admin) -->
                <AuthorizeView Roles="Administrator" Context="adminIncidentsContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="admin/incidents">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                            </svg>
                            Gestión de Incidentes
                        </NavLink>
                    </Authorized>
                </AuthorizeView>

                <AuthorizeView Roles="Administrator,Technician" Context="serviceContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="admin/services">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Servicios
                        </NavLink>
                    </Authorized>
                </AuthorizeView>
            </nav>

            <div class="mt-8 pt-4 border-t border-white border-opacity-20">
                <div class="px-4 py-2 mb-2">
                    <p class="text-sm font-semibold">@context.User.Identity?.Name</p>
                    <p class="text-xs opacity-75">@GetUserRole(context)</p>
                </div>
                <a href="javascript:void(0)" onclick="logoutUser()" 
                   class="w-full flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition text-left">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Cerrar Sesión
                </a>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="px-4 py-2">
                <a href="/login" class="btn btn-secondary w-full text-center block">
                    Iniciar Sesión
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private string GetUserRole(AuthenticationState state)
    {
        var roles = state.User.Claims
            .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
            .Select(c => c.Value)
            .ToList();

        if (!roles.Any()) return "Usuario";

        var roleDisplayNames = roles.Select(role => role switch
        {
            "Student" => "Estudiante",
            "Teacher" => "Docente",
            "Administrative" => "Administrativo",
            "Technician" => "Técnico",
            "Administrator" => "Administrador",
            _ => role
        });

        return string.Join(", ", roleDisplayNames);
    }
}
