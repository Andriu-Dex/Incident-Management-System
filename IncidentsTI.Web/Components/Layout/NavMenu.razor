<div class="bg-blue-600 text-white p-4 h-full flex flex-col">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Incidentes TI</h2>
        <!-- Close button for mobile -->
        <button @onclick="HandleClose" class="lg:hidden p-1 rounded hover:bg-white/10 transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>
    
    <AuthorizeView>
        <Authorized>
            <nav class="space-y-2 flex-1">
                <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                         href="" Match="NavLinkMatch.All" @onclick="HandleNavigate">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    Inicio
                </NavLink>

                <AuthorizeView Roles="Administrator" Context="adminContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="admin/dashboard" @onclick="HandleNavigate">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                            Dashboard
                        </NavLink>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="admin/users" @onclick="HandleNavigate">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            Usuarios
                        </NavLink>
                    </Authorized>
                </AuthorizeView>

                <!-- Incidentes (Todos los usuarios autenticados) -->
                <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                         href="incidents" @onclick="HandleNavigate">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                    </svg>
                    Mis Incidentes
                </NavLink>

                <!-- Base de Conocimiento (Todos los usuarios autenticados) -->
                <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                         href="knowledge" @onclick="HandleNavigate">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    Base de Conocimiento
                </NavLink>

                <!-- Dashboard Técnico -->
                <AuthorizeView Roles="Technician,Administrator" Context="techContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="technician/dashboard" @onclick="HandleNavigate">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                            </svg>
                            Incidentes Asignados
                        </NavLink>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="technician/knowledge" @onclick="HandleNavigate">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Gestionar BC
                        </NavLink>
                    </Authorized>
                </AuthorizeView>

                <!-- Gestión de Incidentes (Admin) -->
                <AuthorizeView Roles="Administrator" Context="adminIncidentsContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="admin/incidents" @onclick="HandleNavigate">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                            </svg>
                            Gestión de Incidentes
                        </NavLink>
                    </Authorized>
                </AuthorizeView>

                <AuthorizeView Roles="Administrator,Technician" Context="serviceContext">
                    <Authorized>
                        <NavLink class="flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition" 
                                 href="admin/services" @onclick="HandleNavigate">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Servicios
                        </NavLink>
                    </Authorized>
                </AuthorizeView>
            </nav>

            <div class="mt-auto pt-4 border-t border-white border-opacity-20">
                <div class="px-4 py-2 mb-2">
                    <p class="text-sm font-semibold truncate">@context.User.Identity?.Name</p>
                    <p class="text-xs opacity-75">@GetUserRole(context)</p>
                </div>
                <a href="javascript:void(0)" onclick="logoutUser()" 
                   class="w-full flex items-center px-4 py-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition text-left">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Cerrar Sesión
                </a>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="px-4 py-2">
                <a href="/login" class="btn btn-secondary w-full text-center block">
                    Iniciar Sesión
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    [Parameter] public EventCallback OnNavigate { get; set; }

    private async Task HandleNavigate()
    {
        await OnNavigate.InvokeAsync();
    }

    private async Task HandleClose()
    {
        await OnNavigate.InvokeAsync();
    }

    private string GetUserRole(AuthenticationState state)
    {
        var roles = state.User.Claims
            .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
            .Select(c => c.Value)
            .ToList();

        if (!roles.Any()) return "Usuario";

        var roleDisplayNames = roles.Select(role => role switch
        {
            "Student" => "Estudiante",
            "Teacher" => "Docente",
            "Administrative" => "Administrativo",
            "Technician" => "Técnico",
            "Administrator" => "Administrador",
            _ => role
        });

        return string.Join(", ", roleDisplayNames);
    }
}
