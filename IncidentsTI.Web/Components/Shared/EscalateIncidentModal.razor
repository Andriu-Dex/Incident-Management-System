@using IncidentsTI.Application.DTOs.Escalation
@using IncidentsTI.Application.Commands
@using IncidentsTI.Application.Queries
@using MediatR

@if (IsVisible)
{
    <!-- Overlay del modal -->
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.6); z-index: 10000;" @onclick="Close">
        <!-- Contenedor del modal -->
        <div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 90%; max-width: 500px; z-index: 10001;" @onclick:stopPropagation="true">
            <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
                <!-- Header -->
                <div class="bg-gradient-to-r from-amber-500 to-orange-500 text-white p-5">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                            </svg>
                            <h3 class="text-xl font-bold">Escalar Incidente</h3>
                        </div>
                        <button @onclick="Close" class="text-white hover:text-amber-200 p-1 transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                
                <!-- Body -->
                <div class="p-6">
                    @if (isLoading)
                    {
                        <div class="text-center py-8">
                            <div class="inline-block animate-spin rounded-full h-10 w-10 border-4 border-amber-500 border-t-transparent"></div>
                            <p class="mt-3 text-gray-600">Cargando niveles de escalamiento...</p>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            
                            <!-- Nivel actual -->
                            @if (CurrentLevel != null)
                            {
                                <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
                                    <span class="text-blue-700 font-medium">Nivel actual:</span>
                                    <span class="text-blue-900 font-semibold ml-2">@CurrentLevel.Name</span>
                                </div>
                            }
                            else
                            {
                                <div class="mb-4 p-3 bg-gray-100 border border-gray-200 rounded-lg">
                                    <span class="text-gray-600 font-medium">Nivel actual:</span>
                                    <span class="text-gray-800 ml-2">Sin asignar</span>
                                </div>
                            }

                            <!-- Selector de nivel -->
                            <div class="mb-4">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Escalar a Nivel <span class="text-red-500">*</span>
                                </label>
                                <InputSelect @bind-Value="model.ToLevelId" class="w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 text-gray-900 bg-white">
                                    <option value="0">-- Seleccionar nivel --</option>
                                    @foreach (var level in availableLevels)
                                    {
                                        <option value="@level.Id">@level.Name</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => model.ToLevelId)" class="text-red-500 text-sm mt-1" />
                                @if (selectedLevel != null)
                                {
                                    <p class="text-gray-500 text-sm mt-1">@selectedLevel.Description</p>
                                }
                            </div>

                            <!-- Motivo -->
                            <div class="mb-4">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Motivo del Escalamiento <span class="text-red-500">*</span>
                                </label>
                                <InputTextArea @bind-Value="model.Reason" rows="3" 
                                              placeholder="Explique por qué se escala este incidente..."
                                              class="w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 text-gray-900 resize-none" />
                                <ValidationMessage For="@(() => model.Reason)" class="text-red-500 text-sm mt-1" />
                            </div>

                            <!-- Notas adicionales -->
                            <div class="mb-4">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Notas Adicionales
                                </label>
                                <InputTextArea @bind-Value="model.Notes" rows="2" 
                                              placeholder="Información adicional para el siguiente nivel..."
                                              class="w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 text-gray-900 resize-none" />
                            </div>

                            <!-- Mensaje de error -->
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg flex items-center gap-2">
                                    <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span class="text-red-700 text-sm">@errorMessage</span>
                                </div>
                            }

                            <!-- Footer con botones -->
                            <div class="flex justify-end gap-3 pt-4 border-t border-gray-200 mt-6">
                                <button type="button" @onclick="Close" disabled="@isSaving"
                                        class="px-5 py-2.5 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-semibold transition-all duration-200 disabled:opacity-50">
                                    Cancelar
                                </button>
                                <button type="submit" disabled="@isSaving"
                                        class="px-5 py-2.5 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-lg hover:from-amber-600 hover:to-orange-600 font-semibold transition-all duration-200 disabled:opacity-50 inline-flex items-center gap-2">
                                    @if (isSaving)
                                    {
                                        <div class="animate-spin rounded-full h-4 w-4 border-2 border-white border-t-transparent"></div>
                                        <span>Escalando...</span>
                                    }
                                    else
                                    {
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                                        </svg>
                                        <span>Escalar Incidente</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public int IncidentId { get; set; }
    [Parameter] public string UserId { get; set; } = string.Empty;
    [Parameter] public EscalationLevelDto? CurrentLevel { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnEscalated { get; set; }
    
    [Inject] private IMediator Mediator { get; set; } = default!;

    private EscalateModel model = new();
    private List<EscalationLevelDto> escalationLevels = new();
    private List<EscalationLevelDto> availableLevels = new();
    private EscalationLevelDto? selectedLevel;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && isLoading)
        {
            await LoadEscalationLevels();
        }
    }

    private async Task LoadEscalationLevels()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            
            var query = new GetEscalationLevelsQuery();
            escalationLevels = (await Mediator.Send(query)).ToList();
            
            // Filter levels to show only higher levels than current
            if (CurrentLevel != null)
            {
                availableLevels = escalationLevels
                    .Where(l => l.Order > CurrentLevel.Order && l.IsActive)
                    .OrderBy(l => l.Order)
                    .ToList();
            }
            else
            {
                availableLevels = escalationLevels
                    .Where(l => l.IsActive)
                    .OrderBy(l => l.Order)
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar niveles: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (model.ToLevelId <= 0)
        {
            errorMessage = "Debe seleccionar un nivel de escalamiento.";
            return;
        }

        if (string.IsNullOrWhiteSpace(model.Reason))
        {
            errorMessage = "Debe ingresar el motivo del escalamiento.";
            return;
        }

        try
        {
            isSaving = true;
            errorMessage = null;

            var command = new EscalateIncidentCommand
            {
                IncidentId = IncidentId,
                ToLevelId = model.ToLevelId,
                Reason = model.Reason,
                Notes = model.Notes,
                EscalatedByUserId = UserId
            };

            var result = await Mediator.Send(command);

            if (result)
            {
                await OnEscalated.InvokeAsync();
                await Close();
            }
            else
            {
                errorMessage = "Error al escalar el incidente. Verifique los datos e intente nuevamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task Close()
    {
        model = new EscalateModel();
        errorMessage = null;
        isLoading = true;
        await OnClose.InvokeAsync();
    }

    private class EscalateModel
    {
        public int ToLevelId { get; set; }
        public string Reason { get; set; } = string.Empty;
        public string? Notes { get; set; }
    }
}
