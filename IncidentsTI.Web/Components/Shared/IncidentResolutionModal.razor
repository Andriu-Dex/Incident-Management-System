@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public int IncidentId { get; set; }

    [Parameter]
    public string TicketNumber { get; set; } = "";

    [Parameter]
    public EventCallback OnClose { get; set; }

    private IEnumerable<IncidentArticleLinkDto> linkedArticles = new List<IncidentArticleLinkDto>();
    private bool isLoading = false;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && IncidentId > 0)
        {
            await LoadLinkedArticles();
        }
    }

    private async Task LoadLinkedArticles()
    {
        isLoading = true;
        try
        {
            var query = new GetIncidentArticleLinksQuery { IncidentId = IncidentId };
            linkedArticles = await Mediator.Send(query);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading linked articles: {ex.Message}");
            linkedArticles = new List<IncidentArticleLinkDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewArticle(int articleId)
    {
        Navigation.NavigateTo($"/knowledge/{articleId}");
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}
