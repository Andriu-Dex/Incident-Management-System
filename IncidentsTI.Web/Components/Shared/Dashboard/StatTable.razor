@* StatTable.razor - Componente reutilizable para tablas de estadísticas *@
@* Diseño basado en ISO 9241 (Usabilidad) y WCAG 2.1 (Accesibilidad) *@
@typeparam TItem

<div class="stat-table bg-white rounded-2xl border border-gray-100 
            hover:shadow-lg transition-all duration-300 overflow-hidden"
     role="region"
     aria-label="@Title">
    
    @* Header *@
    <div class="px-5 py-4 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                @if (IconContent != null)
                {
                    <div class="w-10 h-10 rounded-xl bg-@ColorScheme-50 flex items-center justify-center">
                        @IconContent
                    </div>
                }
                <div>
                    <h3 class="text-base font-semibold text-gray-800">@Title</h3>
                    @if (!string.IsNullOrEmpty(Subtitle))
                    {
                        <p class="text-xs text-gray-500 mt-0.5">@Subtitle</p>
                    }
                </div>
            </div>
            
            @* Badge con total de elementos *@
            @if (Items != null && ShowItemCount)
            {
                <span class="px-2.5 py-1 text-xs font-medium text-@ColorScheme-600 
                             bg-@ColorScheme-50 rounded-full">
                    @Items.Count() elementos
                </span>
            }
        </div>
    </div>
    
    @* Tabla con scroll optimizado *@
    <div class="overflow-x-auto">
        <table class="w-full" role="table" aria-label="@Title">
            <thead>
                <tr class="bg-gray-50/80">
                    @HeaderTemplate
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @if (Items == null || !Items.Any())
                {
                    <tr>
                        <td colspan="@ColumnCount" class="px-5 py-8 text-center text-gray-400">
                            <div class="flex flex-col items-center gap-2">
                                <svg class="w-10 h-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                                          d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                                </svg>
                                <span class="text-sm font-medium">@EmptyMessage</span>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Items.Take(MaxItems))
                    {
                        <tr class="hover:bg-gray-50/50 transition-colors group" tabindex="0">
                            @RowTemplate(item)
                        </tr>
                    }
                    
                    @* Indicador de más elementos si hay más de MaxItems *@
                    @if (Items.Count() > MaxItems && ShowMoreIndicator)
                    {
                        <tr class="bg-gray-50/30">
                            <td colspan="@ColumnCount" class="px-5 py-3 text-center">
                                <button @onclick="OnViewAll" 
                                        class="text-sm text-@ColorScheme-600 hover:text-@ColorScheme-700 
                                               font-medium hover:underline focus:ring-2 focus:ring-@ColorScheme-500 
                                               focus:ring-offset-2 rounded px-2 py-1 transition-colors">
                                    Ver todos (@(Items.Count()) elementos)
                                    <svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    
    @* Footer opcional *@
    @if (FooterContent != null)
    {
        <div class="px-5 py-3 border-t border-gray-100 bg-gray-50/50">
            @FooterContent
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public string ColorScheme { get; set; } = "blue";
    [Parameter] public IEnumerable<TItem>? Items { get; set; }
    [Parameter] public int MaxItems { get; set; } = 5;
    [Parameter] public int ColumnCount { get; set; } = 4;
    [Parameter] public bool ShowItemCount { get; set; } = true;
    [Parameter] public bool ShowMoreIndicator { get; set; } = true;
    [Parameter] public string EmptyMessage { get; set; } = "Sin datos disponibles";
    [Parameter] public RenderFragment? IconContent { get; set; }
    [Parameter] public RenderFragment? HeaderTemplate { get; set; }
    [Parameter] public RenderFragment<TItem> RowTemplate { get; set; } = default!;
    [Parameter] public RenderFragment? FooterContent { get; set; }
    [Parameter] public EventCallback OnViewAll { get; set; }
}
