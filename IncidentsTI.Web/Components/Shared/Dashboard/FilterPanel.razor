@* FilterPanel.razor - Panel de filtros accesible *@
@* Diseño basado en ISO 9241 y WCAG 2.1 *@

<div class="filter-panel bg-white rounded-2xl border border-gray-100 shadow-sm relative z-20"
     role="search"
     aria-label="Filtros de estadísticas">
    
    <div class="p-4 bg-gradient-to-r from-gray-50 to-white border-b border-gray-100">
        <div class="flex flex-wrap items-end gap-4">
            @* Selector de período predefinido *@
            <div class="flex-1 min-w-[180px]">
                <label for="period-select" class="block text-sm font-medium text-gray-700 mb-1.5">
                    Período
                </label>
                <div class="relative">
                    <select id="period-select"
                            @bind="SelectedPeriod"
                            @bind:after="OnPeriodChanged"
                            class="w-full pl-10 pr-4 py-2.5 text-sm bg-white border border-gray-200 rounded-xl
                                   focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors
                                   appearance-none cursor-pointer hover:border-gray-300">
                        <option value="today">Hoy</option>
                        <option value="yesterday">Ayer</option>
                        <option value="week">Últimos 7 días</option>
                        <option value="month">Últimos 30 días</option>
                        <option value="quarter">Último trimestre</option>
                        <option value="year">Último año</option>
                        <option value="custom">Personalizado</option>
                    </select>
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        </svg>
                    </div>
                </div>
            </div>
            
            @* Fecha inicio *@
            <div class="@(SelectedPeriod == "custom" ? "flex-1 min-w-[160px]" : "hidden")">
                <label for="start-date" class="block text-sm font-medium text-gray-700 mb-1.5">
                    Desde
                </label>
                <input type="date" 
                       id="start-date"
                       @bind="StartDate"
                       max="@EndDate.ToString("yyyy-MM-dd")"
                       class="w-full px-4 py-2.5 text-sm bg-white border border-gray-200 rounded-xl
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors
                              hover:border-gray-300" />
            </div>
            
            @* Fecha fin *@
            <div class="@(SelectedPeriod == "custom" ? "flex-1 min-w-[160px]" : "hidden")">
                <label for="end-date" class="block text-sm font-medium text-gray-700 mb-1.5">
                    Hasta
                </label>
                <input type="date" 
                       id="end-date"
                       @bind="EndDate"
                       min="@StartDate.ToString("yyyy-MM-dd")"
                       max="@DateTime.Today.ToString("yyyy-MM-dd")"
                       class="w-full px-4 py-2.5 text-sm bg-white border border-gray-200 rounded-xl
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors
                              hover:border-gray-300" />
            </div>
            
            @* Botón de aplicar filtro *@
            <div class="flex gap-2">
                <button @onclick="ApplyFilter"
                        class="inline-flex items-center gap-2 px-5 py-2.5 
                               bg-gradient-to-r from-blue-600 to-blue-700 text-white text-sm font-medium 
                               rounded-xl hover:from-blue-700 hover:to-blue-800 
                               focus:ring-2 focus:ring-blue-500 focus:ring-offset-2
                               transition-all duration-200 shadow-sm hover:shadow-md
                               active:scale-95"
                        aria-label="Aplicar filtros">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    Actualizar
                </button>
                
                @* Botón de exportar - Abre directamente el modal *@
                @if (ShowExportButton)
                {
                    <button @onclick="HandleExportClick"
                            class="inline-flex items-center gap-2 px-4 py-2.5 
                                   bg-white border border-gray-200 text-gray-700 text-sm font-medium 
                                   rounded-xl hover:bg-gray-50 hover:border-gray-300
                                   focus:ring-2 focus:ring-blue-500 focus:ring-offset-2
                                   transition-all duration-200"
                            aria-label="Abrir opciones de exportación">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Exportar
                    </button>
                }
            </div>
        </div>
        
        @* Resumen del período seleccionado *@
        <div class="mt-3 text-xs text-gray-500 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>
                Mostrando datos desde <strong>@StartDate.ToString("dd/MM/yyyy")</strong> 
                hasta <strong>@EndDate.ToString("dd/MM/yyyy")</strong>
                (@GetDaysCount() días)
            </span>
        </div>
    </div>
</div>

@code {
    [Parameter] public DateTime StartDate { get; set; } = DateTime.Today.AddDays(-30);
    [Parameter] public DateTime EndDate { get; set; } = DateTime.Today;
    [Parameter] public string SelectedPeriod { get; set; } = "month";
    [Parameter] public bool ShowExportButton { get; set; } = true;
    [Parameter] public EventCallback<(DateTime Start, DateTime End)> OnFilterApply { get; set; }
    [Parameter] public EventCallback OnExport { get; set; }

    private void OnPeriodChanged()
    {
        var today = DateTime.Today;
        
        (StartDate, EndDate) = SelectedPeriod switch
        {
            "today" => (today, today),
            "yesterday" => (today.AddDays(-1), today.AddDays(-1)),
            "week" => (today.AddDays(-7), today),
            "month" => (today.AddDays(-30), today),
            "quarter" => (today.AddMonths(-3), today),
            "year" => (today.AddYears(-1), today),
            _ => (StartDate, EndDate)
        };
    }

    private async Task ApplyFilter()
    {
        await OnFilterApply.InvokeAsync((StartDate, EndDate));
    }

    private async Task HandleExportClick()
    {
        await OnExport.InvokeAsync();
    }

    private int GetDaysCount()
    {
        return (EndDate - StartDate).Days + 1;
    }
}
