@using IncidentsTI.Application.Commands
@using IncidentsTI.Application.DTOs.Knowledge
@using IncidentsTI.Application.Queries
@using IncidentsTI.Domain.Enums
@using MediatR
@inject IMediator Mediator
@inject IToastService ToastService

@if (IsVisible)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-[60] p-4" @onclick="Close">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-3xl max-h-[90vh] overflow-hidden" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-indigo-600 to-blue-600">
                <div class="flex justify-between items-center">
                    <h2 class="text-xl font-bold text-white flex items-center gap-2">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                        </svg>
                        Vincular Artículo de BC
                    </h2>
                    <button @onclick="Close" class="text-white/80 hover:text-white p-1 rounded-lg hover:bg-white/10 transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <p class="text-indigo-100 text-sm mt-1">Selecciona un artículo que te ayudó a resolver este incidente</p>
            </div>

            <!-- Search Bar -->
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <div class="relative">
                    <input type="text" 
                           value="@searchKeyword"
                           @oninput="OnSearchInput"
                           placeholder="Buscar artículo por título, palabras clave..."
                           class="w-full pl-10 pr-10 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-base" />
                    <svg class="absolute left-3 top-3.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    @if (!string.IsNullOrEmpty(searchKeyword))
                    {
                        <button @onclick="ClearSearch" class="absolute right-3 top-3.5 text-gray-400 hover:text-gray-600">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    }
                </div>
                @if (isSearching)
                {
                    <div class="flex items-center gap-2 mt-2 text-sm text-indigo-600">
                        <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-indigo-600"></div>
                        Buscando...
                    </div>
                }
            </div>

            <!-- Modal Body - Two Column Layout -->
            <div class="flex h-[calc(90vh-280px)] min-h-[300px]">
                <!-- Left Column: Article List -->
                <div class="w-1/2 border-r border-gray-200 overflow-y-auto">
                    @if (isLoading)
                    {
                        <div class="flex justify-center items-center py-12">
                            <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-indigo-600"></div>
                        </div>
                    }
                    else if (!articles.Any())
                    {
                        <div class="text-center py-12 px-4 text-gray-500">
                            <svg class="w-16 h-16 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <p class="font-medium">No se encontraron artículos</p>
                            <p class="text-sm mt-1">Intenta con otras palabras clave</p>
                        </div>
                    }
                    else
                    {
                        <div class="divide-y divide-gray-100">
                            @foreach (var article in articles)
                            {
                                <div class="@(selectedArticleId == article.Id ? "bg-indigo-50 border-l-4 border-indigo-500" : "hover:bg-gray-50 border-l-4 border-transparent") 
                                            p-4 cursor-pointer transition-all"
                                     @onclick="() => SelectArticle(article)">
                                    <div class="flex items-start justify-between gap-2">
                                        <div class="flex-1 min-w-0">
                                            <h4 class="font-semibold text-gray-900 text-sm truncate">@article.Title</h4>
                                            <p class="text-xs text-gray-500 line-clamp-2 mt-1">@article.ProblemDescription</p>
                                            <div class="flex items-center gap-2 mt-2 flex-wrap">
                                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-700">
                                                    @article.ServiceName
                                                </span>
                                                <span class="text-xs text-gray-400 flex items-center gap-1">
                                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                    </svg>
                                                    @article.UsageCount usos
                                                </span>
                                            </div>
                                        </div>
                                        @if (selectedArticleId == article.Id)
                                        {
                                            <svg class="w-5 h-5 text-indigo-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Right Column: Article Preview & Link Options -->
                <div class="w-1/2 overflow-y-auto bg-gray-50">
                    @if (selectedArticle == null)
                    {
                        <div class="flex flex-col items-center justify-center h-full text-gray-400 p-6">
                            <svg class="w-20 h-20 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <p class="text-center font-medium">Selecciona un artículo</p>
                            <p class="text-center text-sm mt-1">para ver el detalle y vincularlo</p>
                        </div>
                    }
                    else
                    {
                        <div class="p-5">
                            <!-- Article Preview -->
                            <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden mb-4">
                                <div class="bg-gradient-to-r from-indigo-500 to-blue-500 px-4 py-3">
                                    <h3 class="font-bold text-white">@selectedArticle.Title</h3>
                                </div>
                                <div class="p-4 space-y-3">
                                    <div>
                                        <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Problema</span>
                                        <p class="text-sm text-gray-700 mt-1 line-clamp-3">@selectedArticle.ProblemDescription</p>
                                    </div>
                                    <div class="flex items-center gap-3 text-sm">
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                            @selectedArticle.ServiceName
                                        </span>
                                        @if (selectedArticle.EstimatedResolutionTimeMinutes.HasValue)
                                        {
                                            <span class="text-gray-500 flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                @selectedArticle.EstimatedTimeFormatted
                                            </span>
                                        }
                                        <span class="text-gray-500 flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            </svg>
                                            @selectedArticle.UsageCount usos
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Link Options -->
                            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-4 space-y-4">
                                <h4 class="font-semibold text-gray-900 flex items-center gap-2">
                                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Opciones de vinculación
                                </h4>

                                <!-- Toggle: Was Helpful -->
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                    <div class="flex items-center gap-3">
                                        <div class="@(wasHelpful ? "bg-green-100 text-green-600" : "bg-gray-200 text-gray-400") p-2 rounded-full transition-colors">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                                            </svg>
                                        </div>
                                        <div>
                                            <span class="font-medium text-gray-900">¿Fue útil este artículo?</span>
                                            <p class="text-xs text-gray-500">Marca si te ayudó a resolver el incidente</p>
                                        </div>
                                    </div>
                                    <button type="button" 
                                            @onclick="() => wasHelpful = !wasHelpful"
                                            class="@(wasHelpful ? "bg-green-500" : "bg-gray-300") relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
                                            role="switch" 
                                            aria-checked="@wasHelpful">
                                        <span class="@(wasHelpful ? "translate-x-5" : "translate-x-0") pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
                                    </button>
                                </div>

                                <!-- Notes -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Notas de aplicación (opcional)
                                    </label>
                                    <textarea @bind="notes" rows="2"
                                              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm resize-none"
                                              placeholder="Ej: Apliqué el paso 3 modificando el parámetro X..."></textarea>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="px-6 py-4 border-t border-gray-200 bg-white flex items-center justify-between">
                <div class="text-sm text-gray-500">
                    @if (selectedArticle != null)
                    {
                        <span class="inline-flex items-center gap-1">
                            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            Artículo seleccionado
                        </span>
                    }
                    else
                    {
                        <span>@articles.Count() artículos disponibles</span>
                    }
                </div>
                <div class="flex gap-3">
                    <button @onclick="Close" 
                            class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors">
                        Cancelar
                    </button>
                    <button @onclick="LinkArticle" 
                            disabled="@(selectedArticle == null || isLinking)"
                            class="px-5 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed font-semibold transition-colors flex items-center gap-2 shadow-sm">
                        @if (isLinking)
                        {
                            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white"></div>
                            <span>Vinculando...</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                            </svg>
                            <span>Vincular Artículo</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public int IncidentId { get; set; }

    [Parameter]
    public int ServiceId { get; set; }

    [Parameter]
    public IncidentType IncidentType { get; set; }

    [Parameter]
    public string UserId { get; set; } = "";

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback OnLinked { get; set; }

    private IEnumerable<KnowledgeArticleListDto> articles = new List<KnowledgeArticleListDto>();
    private KnowledgeArticleListDto? selectedArticle;
    private int? selectedArticleId;
    private string searchKeyword = "";
    private bool isLoading = false;
    private bool isSearching = false;
    private bool isLinking = false;
    private bool wasHelpful = true;
    private string? notes;
    
    private System.Timers.Timer? debounceTimer;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && !articles.Any())
        {
            await LoadRelatedArticles();
        }
    }

    private async Task LoadRelatedArticles()
    {
        isLoading = true;
        StateHasChanged();
        try
        {
            var query = new GetRelatedArticlesQuery
            {
                ServiceId = ServiceId,
                IncidentType = IncidentType,
                MaxResults = 15
            };
            articles = await Mediator.Send(query);
        }
        catch
        {
            articles = new List<KnowledgeArticleListDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchKeyword = e.Value?.ToString() ?? "";
        
        // Debounce search
        debounceTimer?.Stop();
        debounceTimer?.Dispose();
        
        if (string.IsNullOrWhiteSpace(searchKeyword))
        {
            _ = LoadRelatedArticles();
            return;
        }
        
        isSearching = true;
        StateHasChanged();
        
        debounceTimer = new System.Timers.Timer(400);
        debounceTimer.Elapsed += async (sender, args) =>
        {
            debounceTimer?.Stop();
            await InvokeAsync(async () =>
            {
                await SearchArticles();
                isSearching = false;
                StateHasChanged();
            });
        };
        debounceTimer.AutoReset = false;
        debounceTimer.Start();
    }

    private async Task SearchArticles()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(searchKeyword))
            {
                await LoadRelatedArticles();
            }
            else
            {
                var query = new SearchKnowledgeArticlesQuery
                {
                    Keyword = searchKeyword,
                    IncludeInactive = false
                };
                articles = await Mediator.Send(query);
            }
        }
        catch
        {
            articles = new List<KnowledgeArticleListDto>();
        }
    }

    private async Task ClearSearch()
    {
        searchKeyword = "";
        selectedArticle = null;
        selectedArticleId = null;
        await LoadRelatedArticles();
    }

    private void SelectArticle(KnowledgeArticleListDto article)
    {
        if (selectedArticleId == article.Id)
        {
            selectedArticle = null;
            selectedArticleId = null;
        }
        else
        {
            selectedArticle = article;
            selectedArticleId = article.Id;
        }
    }

    private async Task LinkArticle()
    {
        if (selectedArticle == null || string.IsNullOrEmpty(UserId))
            return;

        isLinking = true;
        try
        {
            var command = new LinkArticleToIncidentCommand
            {
                IncidentId = IncidentId,
                ArticleId = selectedArticle.Id,
                LinkedByUserId = UserId,
                WasHelpful = wasHelpful,
                Notes = notes
            };

            var result = await Mediator.Send(command);
            
            if (result)
            {
                ToastService.ShowSuccess($"Artículo \"{selectedArticle.Title}\" vinculado correctamente");
                await OnLinked.InvokeAsync();
            }
            else
            {
                ToastService.ShowError("No se pudo vincular el artículo");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error al vincular: {ex.Message}");
        }
        finally
        {
            isLinking = false;
        }
    }

    private async Task Close()
    {
        selectedArticle = null;
        selectedArticleId = null;
        wasHelpful = true;
        notes = null;
        searchKeyword = "";
        articles = new List<KnowledgeArticleListDto>();
        debounceTimer?.Stop();
        debounceTimer?.Dispose();
        await OnClose.InvokeAsync();
    }
    
    public void Dispose()
    {
        debounceTimer?.Stop();
        debounceTimer?.Dispose();
    }
}
