    <!-- Blazor Error UI - Personalizado y oculto -->
    <div id="blazor-error-ui" style="display: none !important; visibility: hidden;"></div>
    
    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="js/charts.js"></script>
    
    <!-- Ocultar cualquier error de reconexión de Blazor -->
    <script>
        (function() {
            // Función para ocultar el error UI
            function hideBlazorError() {
                var errorUI = document.getElementById('blazor-error-ui');
                if (errorUI) {
                    errorUI.style.display = 'none';
                    errorUI.style.visibility = 'hidden';
                }
            }
            
            // Ejecutar inmediatamente y en intervalos
            hideBlazorError();
            document.addEventListener('DOMContentLoaded', hideBlazorError);
            window.addEventListener('load', hideBlazorError);
            
            // Observer para detectar cambios en el DOM
            var observer = new MutationObserver(function(mutations) {
                hideBlazorError();
            });
            
            observer.observe(document.body, { 
                childList: true, 
                subtree: true,
                attributes: true,
                attributeFilter: ['style', 'class']
            });
        })();
    </script>
</body>

</html>
