@page "/forgot-password"
@rendermode InteractiveServer
@layout Layout.EmptyLayout
@using Microsoft.JSInterop
@inject IJSRuntime JS
@inject NavigationManager Navigation

<PageTitle>Recuperar Contraseña</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-lg p-8 max-w-md w-full">
        
        @if (!requestSent)
        {
            <!-- Request Form -->
            <div class="mb-8">
                <div class="flex justify-center mb-4">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                        </svg>
                    </div>
                </div>
                <h2 class="text-2xl font-bold text-gray-900 text-center">
                    Recuperar Contraseña
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Ingrese su correo electrónico y le enviaremos instrucciones para restablecer su contraseña.
                </p>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded flex items-start" role="alert">
                    <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <span>@errorMessage</span>
                </div>
            }

            <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="space-y-4">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                            Correo Electrónico
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                </svg>
                            </div>
                            <InputText id="email" 
                                       @bind-Value="model.Email" 
                                       class="form-input pl-10" 
                                       placeholder="usuario@uta.edu.ec"
                                       autocomplete="email"
                                       aria-describedby="email-hint" />
                        </div>
                        <p id="email-hint" class="mt-1 text-xs text-gray-500">
                            Use el correo institucional con el que se registró.
                        </p>
                        <ValidationMessage For="@(() => model.Email)" class="text-red-600 text-sm mt-1" />
                    </div>
                </div>

                <div class="mt-6 space-y-3">
                    <button type="submit" 
                            disabled="@isLoading" 
                            class="btn btn-primary w-full flex items-center justify-center"
                            aria-busy="@isLoading">
                        @if (isLoading)
                        {
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Enviando...</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <span>Enviar Instrucciones</span>
                        }
                    </button>

                    <a href="/login" 
                       class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Volver al inicio de sesión
                    </a>
                </div>
            </EditForm>
        }
        else
        {
            <!-- Success Message -->
            <div class="text-center">
                <div class="flex justify-center mb-4">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                </div>
                
                <h2 class="text-2xl font-bold text-gray-900 mb-2">
                    ¡Revise su correo!
                </h2>
                <p class="text-gray-600 mb-6">
                    @successMessage
                </p>

                @if (!string.IsNullOrEmpty(resetLink))
                {
                    <!-- Development only: Show reset link -->
                    <div class="mb-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg text-left">
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-yellow-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-yellow-800 mb-1">
                                    Modo Desarrollo
                                </p>
                                <p class="text-xs text-yellow-700 mb-2">
                                    En producción, este enlace se enviaría por correo electrónico.
                                </p>
                                <a href="@resetLink" 
                                   class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500 break-all">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                                    </svg>
                                    Ir a restablecer contraseña
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div class="space-y-3">
                    <button @onclick="ResetForm" 
                            class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Enviar de nuevo
                    </button>

                    <a href="/login" 
                       class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Volver al inicio de sesión
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private ForgotPasswordModel model = new();
    private bool isLoading = false;
    private bool requestSent = false;
    private string? errorMessage;
    private string? successMessage;
    private string? resetLink;

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await JS.InvokeAsync<ForgotPasswordResponse>("requestPasswordReset", model.Email);

            if (result?.Success == true)
            {
                requestSent = true;
                successMessage = result.Message;
                resetLink = result.ResetLink; // Only in development
            }
            else
            {
                errorMessage = result?.Message ?? "Error al procesar la solicitud.";
            }
        }
        catch (Exception)
        {
            errorMessage = "Error de conexión. Por favor, intente nuevamente.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ResetForm()
    {
        requestSent = false;
        model = new();
        errorMessage = null;
        successMessage = null;
        resetLink = null;
    }

    private class ForgotPasswordModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "El correo electrónico es requerido")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Ingrese un correo electrónico válido")]
        public string Email { get; set; } = string.Empty;
    }

    private class ForgotPasswordResponse
    {
        public bool Success { get; set; }
        public string? Message { get; set; }
        public string? ResetLink { get; set; }
    }
}
