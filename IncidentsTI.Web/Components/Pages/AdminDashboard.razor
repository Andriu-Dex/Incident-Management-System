@code {
    private DashboardStatisticsDto? statistics;
    private bool isLoading = true;
    private DateTime startDate = DateTime.Now.AddDays(-30);
    private DateTime endDate = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await LoadStatistics();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender && statistics != null && !isLoading)
        {
            await RenderCharts();
        }
    }

    private async Task LoadStatistics()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            statistics = await Mediator.Send(new GetDashboardStatisticsQuery
            {
                StartDate = startDate,
                EndDate = endDate
            });
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading statistics: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
            
            // Render charts after data is loaded
            await Task.Delay(100); // Small delay to ensure DOM is ready
            await RenderCharts();
        }
    }

    private async Task RenderCharts()
    {
        if (statistics == null) return;

        try
        {
            // Status Chart (Doughnut)
            var statusLabels = statistics.IncidentsByStatus.Select(s => s.StatusDisplay).ToArray();
            var statusData = statistics.IncidentsByStatus.Select(s => s.Count).ToArray();
            var statusColors = statistics.IncidentsByStatus.Select(s => s.Color).ToArray();
            
            await JSRuntime.InvokeVoidAsync("renderDoughnutChart", "statusChart", statusLabels, statusData, statusColors);

            // Priority Chart (Doughnut)
            var priorityLabels = statistics.IncidentsByPriority.Select(p => p.PriorityDisplay).ToArray();
            var priorityData = statistics.IncidentsByPriority.Select(p => p.Count).ToArray();
            var priorityColors = statistics.IncidentsByPriority.Select(p => p.Color).ToArray();
            
            await JSRuntime.InvokeVoidAsync("renderDoughnutChart", "priorityChart", priorityLabels, priorityData, priorityColors);

            // Trend Chart (Line)
            var trendLabels = statistics.DailyTrend.Select(t => t.Label).ToArray();
            var createdData = statistics.DailyTrend.Select(t => t.Created).ToArray();
            var resolvedData = statistics.DailyTrend.Select(t => t.Resolved).ToArray();
            
            await JSRuntime.InvokeVoidAsync("renderLineChart", "trendChart", trendLabels, createdData, resolvedData);

            // Type Chart (Pie)
            var typeLabels = statistics.IncidentsByType.Select(t => t.TypeDisplay).ToArray();
            var typeData = statistics.IncidentsByType.Select(t => t.Count).ToArray();
            var typeColors = statistics.IncidentsByType.Select(t => t.Color).ToArray();
            
            await JSRuntime.InvokeVoidAsync("renderDoughnutChart", "typeChart", typeLabels, typeData, typeColors);

            // Top Services Chart (Bar)
            var topServices = statistics.IncidentsByService.Take(5).ToList();
            var serviceLabels = topServices.Select(s => s.ServiceName).ToArray();
            var serviceData = topServices.Select(s => s.TotalIncidents).ToArray();
            
            await JSRuntime.InvokeVoidAsync("renderBarChart", "topServicesChart", serviceLabels, serviceData);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error rendering charts: {ex.Message}");
        }
    }

    private string FormatHours(double hours)
    {
        if (hours < 1)
            return $"{Math.Round(hours * 60)} min";
        if (hours < 24)
            return $"{Math.Round(hours, 1)} hrs";
        
        var days = Math.Floor(hours / 24);
        var remainingHours = hours % 24;
        return $"{days}d {Math.Round(remainingHours)}h";
    }

    private string GetCategoryDisplay(string category) => category switch
    {
        "Email" => "Correo",
        "Network" => "Red",
        "AcademicSystems" => "Sistemas Acad√©micos",
        "Hardware" => "Hardware",
        "Software" => "Software",
        "Other" => "Otros",
        _ => category
    };

    private string GetCategoryClass(string category) => category switch
    {
        "Email" => "bg-purple-100 text-purple-700",
        "Network" => "bg-cyan-100 text-cyan-700",
        "AcademicSystems" => "bg-indigo-100 text-indigo-700",
        "Hardware" => "bg-orange-100 text-orange-700",
        "Software" => "bg-pink-100 text-pink-700",
        _ => "bg-gray-100 text-gray-700"
    };

    private string GetInitials(string name)
    {
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts.Length > 0 ? parts[0][0].ToString().ToUpper() : "?";
    }

    private string GetResolutionRateClass(decimal rate) => rate switch
    {
        >= 80 => "bg-emerald-500",
        >= 60 => "bg-amber-500",
        >= 40 => "bg-orange-500",
        _ => "bg-red-500"
    };

    private string GetResolutionRateTextClass(decimal rate) => rate switch
    {
        >= 80 => "text-emerald-600",
        >= 60 => "text-amber-600",
        >= 40 => "text-orange-600",
        _ => "text-red-600"
    };
}
