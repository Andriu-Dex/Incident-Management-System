@page "/knowledge"
@attribute [Authorize]
@using IncidentsTI.Application.DTOs.Knowledge
@using IncidentsTI.Application.Queries
@using IncidentsTI.Domain.Enums
@using MediatR
@inject IMediator Mediator
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Base de Conocimiento - Sistema de Incidentes TI</PageTitle>

<div class="container mx-auto px-4 py-6">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
            <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Base de Conocimiento
        </h1>
        <p class="text-gray-600 mt-1">Encuentra soluciones documentadas para problemas comunes</p>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search Input -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Buscar</label>
                <div class="relative">
                    <input type="text" 
                           @bind="searchKeyword" 
                           @bind:event="oninput"
                           @onkeydown="HandleKeyDown"
                           placeholder="Buscar por palabra clave, título o descripción..."
                           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <svg class="absolute left-3 top-2.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
            </div>

            <!-- Service Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Servicio</label>
                <select @bind="selectedServiceId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Todos los servicios</option>
                    @foreach (var service in services)
                    {
                        <option value="@service.Id">@service.Name</option>
                    }
                </select>
            </div>

            <!-- Type Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Tipo de Problema</label>
                <select @bind="selectedIncidentType" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Todos los tipos</option>
                    <option value="@IncidentType.Failure">Fallo</option>
                    <option value="@IncidentType.Query">Consulta</option>
                    <option value="@IncidentType.Request">Solicitud</option>
                </select>
            </div>
        </div>

        <!-- Search Button -->
        <div class="mt-4 flex justify-end gap-2">
            <button @onclick="ClearFilters" 
                    class="px-4 py-2 text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-lg transition-colors">
                Limpiar filtros
            </button>
            <button @onclick="SearchArticles" 
                    class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                Buscar
            </button>
        </div>
    </div>

    <!-- Results -->
    @if (isLoading)
    {
        <div class="flex justify-center items-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (articles == null || !articles.Any())
    {
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No se encontraron artículos</h3>
            <p class="text-gray-500">Intenta con otros términos de búsqueda o filtros</p>
        </div>
    }
    else
    {
        <div class="mb-4 text-sm text-gray-600">
            Se encontraron <span class="font-semibold">@articles.Count()</span> artículo(s)
        </div>

        <div class="grid gap-4">
            @foreach (var article in articles)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow cursor-pointer"
                     @onclick="() => ViewArticle(article.Id)">
                    <div class="p-5">
                        <div class="flex justify-between items-start mb-3">
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors">
                                    @article.Title
                                </h3>
                                <div class="flex flex-wrap gap-2 mt-2">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        @article.ServiceName
                                    </span>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetIncidentTypeBadgeClass(article.IncidentType)">
                                        @GetIncidentTypeName(article.IncidentType)
                                    </span>
                                </div>
                            </div>
                            <div class="text-right text-sm text-gray-500">
                                <div class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                    @article.UsageCount usos
                                </div>
                                @if (article.EstimatedResolutionTimeMinutes.HasValue)
                                {
                                    <div class="flex items-center gap-1 mt-1">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        @article.EstimatedTimeFormatted
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <p class="text-gray-600 text-sm mb-3">
                            @article.ProblemDescription
                        </p>

                        @if (article.Keywords.Any())
                        {
                            <div class="flex flex-wrap gap-1">
                                @foreach (var keyword in article.Keywords.Take(5))
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                                        #@keyword
                                    </span>
                                }
                                @if (article.Keywords.Count > 5)
                                {
                                    <span class="text-xs text-gray-500">+@(article.Keywords.Count - 5) más</span>
                                }
                            </div>
                        }

                        <div class="mt-3 pt-3 border-t border-gray-100 flex justify-between items-center text-xs text-gray-500">
                            <span>Por @article.AuthorName</span>
                            <span>@FormatDate(article.CreatedAt)</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Most Used Articles (Sidebar info) -->
    @if (!isLoading && string.IsNullOrEmpty(searchKeyword) && !selectedServiceId.HasValue && !selectedIncidentType.HasValue && mostUsedArticles.Any())
    {
        <div class="mt-8">
            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
                Artículos más consultados
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                @foreach (var article in mostUsedArticles.Take(3))
                {
                    <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg p-4 cursor-pointer hover:shadow-md transition-shadow"
                         @onclick="() => ViewArticle(article.Id)">
                        <h4 class="font-medium text-gray-900 mb-2 line-clamp-2">@article.Title</h4>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-blue-600">@article.ServiceName</span>
                            <span class="text-gray-500">@article.UsageCount usos</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private IEnumerable<KnowledgeArticleListDto> articles = new List<KnowledgeArticleListDto>();
    private IEnumerable<KnowledgeArticleListDto> mostUsedArticles = new List<KnowledgeArticleListDto>();
    private List<ServiceListItem> services = new();
    
    private string searchKeyword = "";
    private int? selectedServiceId;
    private IncidentType? selectedIncidentType;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadServices();
        await SearchArticles();
        await LoadMostUsed();
    }

    private async Task LoadServices()
    {
        try
        {
            var result = await Mediator.Send(new Application.Queries.GetAllServicesQuery());
            services = result.Select(s => new ServiceListItem { Id = s.Id, Name = s.Name }).ToList();
        }
        catch (Exception)
        {
            services = new List<ServiceListItem>();
        }
    }

    private async Task SearchArticles()
    {
        isLoading = true;
        try
        {
            var query = new SearchKnowledgeArticlesQuery
            {
                Keyword = string.IsNullOrWhiteSpace(searchKeyword) ? null : searchKeyword,
                ServiceId = selectedServiceId,
                IncidentType = selectedIncidentType,
                IncludeInactive = false
            };
            
            articles = await Mediator.Send(query);
        }
        catch (Exception)
        {
            articles = new List<KnowledgeArticleListDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadMostUsed()
    {
        try
        {
            var query = new GetAllArticlesQuery { IncludeInactive = false };
            var allArticles = await Mediator.Send(query);
            mostUsedArticles = allArticles.OrderByDescending(a => a.UsageCount).Take(6).ToList();
        }
        catch
        {
            mostUsedArticles = new List<KnowledgeArticleListDto>();
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchArticles();
        }
    }

    private async Task ClearFilters()
    {
        searchKeyword = "";
        selectedServiceId = null;
        selectedIncidentType = null;
        await SearchArticles();
    }

    private void ViewArticle(int articleId)
    {
        Navigation.NavigateTo($"/knowledge/{articleId}");
    }

    private string GetIncidentTypeName(IncidentType type) => type switch
    {
        IncidentType.Failure => "Fallo",
        IncidentType.Query => "Consulta",
        IncidentType.Request => "Solicitud",
        _ => "Desconocido"
    };

    private string GetIncidentTypeBadgeClass(IncidentType type) => type switch
    {
        IncidentType.Failure => "bg-red-100 text-red-800",
        IncidentType.Query => "bg-purple-100 text-purple-800",
        IncidentType.Request => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string FormatDate(DateTime date)
    {
        var ecuadorTime = TimeZoneInfo.ConvertTimeFromUtc(date, 
            TimeZoneInfo.FindSystemTimeZoneById("SA Pacific Standard Time"));
        return ecuadorTime.ToString("dd/MM/yyyy");
    }

    private class ServiceListItem
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
    }
}
