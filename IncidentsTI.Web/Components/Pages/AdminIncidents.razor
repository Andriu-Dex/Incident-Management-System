@page "/admin/incidents"
@using IncidentsTI.Application.Commands
@using IncidentsTI.Application.DTOs
@using IncidentsTI.Application.DTOs.Escalation
@using IncidentsTI.Application.DTOs.Users
@using IncidentsTI.Application.Queries
@using IncidentsTI.Application.Features.Users.Queries
@using IncidentsTI.Domain.Enums
@using MediatR
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@attribute [Authorize(Roles = "Administrator")]
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<PageTitle>Gestión de Incidentes - Sistema de Incidentes TI</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                    </svg>
                    <h1 class="text-3xl font-bold text-gray-900">Gestión de Incidentes</h1>
                </div>
                <div class="flex items-center gap-4">
                    <!-- Super Admin Toggle -->
                    <div class="flex items-center gap-3">
                        <span class="text-sm font-medium text-gray-600">Super Admin</span>
                        <button @onclick="ToggleSuperAdminMode" 
                                class="@(superAdminMode ? "bg-yellow-500" : "bg-gray-300") relative inline-flex h-8 w-14 items-center rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2">
                            <span class="@(superAdminMode ? "translate-x-7" : "translate-x-1") inline-flex h-6 w-6 items-center justify-center rounded-full bg-white shadow-md transition-transform duration-200">
                                <svg class="w-4 h-4 @(superAdminMode ? "text-yellow-500" : "text-gray-400")" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <p class="text-gray-600">Administra todos los incidentes del sistema</p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
            <div class="bg-white rounded-xl p-6 border-2 border-blue-200 shadow-sm">
                <div class="text-blue-600 text-sm font-semibold mb-1">Total</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count()</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-green-200 shadow-sm">
                <div class="text-green-600 text-sm font-semibold mb-1">Abiertos</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.Open)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-yellow-200 shadow-sm">
                <div class="text-yellow-600 text-sm font-semibold mb-1">En Progreso</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.InProgress)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-orange-200 shadow-sm">
                <div class="text-orange-600 text-sm font-semibold mb-1">Sin Asignar</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => string.IsNullOrEmpty(i.AssignedToName))</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-gray-200 shadow-sm">
                <div class="text-gray-600 text-sm font-semibold mb-1">Cerrados</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.Closed)</div>
            </div>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Estado</label>
                    <select @bind="statusFilter" @bind:after="ApplyFilters" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todos</option>
                        <option value="@IncidentStatus.Open">Abierto</option>
                        <option value="@IncidentStatus.InProgress">En Progreso</option>
                        <option value="@IncidentStatus.Escalated">Escalado</option>
                        <option value="@IncidentStatus.Resolved">Resuelto</option>
                        <option value="@IncidentStatus.Closed">Cerrado</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Prioridad</label>
                    <select @bind="priorityFilter" @bind:after="ApplyFilters" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todas</option>
                        <option value="@IncidentPriority.Low">Baja</option>
                        <option value="@IncidentPriority.Medium">Media</option>
                        <option value="@IncidentPriority.High">Alta</option>
                        <option value="@IncidentPriority.Critical">Crítica</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Asignación</label>
                    <select @bind="assignmentFilter" @bind:after="ApplyFilters" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todos</option>
                        <option value="unassigned">Sin Asignar</option>
                        <option value="assigned">Asignados</option>
                    </select>
                </div>
                <div class="flex items-end">
                    <button @onclick="ClearFilters" class="w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-200 font-semibold flex items-center justify-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Limpiar
                    </button>
                </div>
            </div>
        </div>

        <!-- Incidents Table -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            @if (filteredIncidents.Any())
            {
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-blue-50 to-indigo-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Ticket</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Título</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Usuario</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Prioridad</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Estado</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Asignado</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var incident in filteredIncidents)
                        {
                            <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="font-mono text-xs font-semibold text-blue-600">@incident.TicketNumber</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-gray-900 max-w-xs truncate">@incident.Title</div>
                                    <div class="text-xs text-gray-500">@incident.ServiceName</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    @incident.UserName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@GetPriorityBadgeClass(incident.Priority) text-xs">
                                        @incident.PriorityName
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@GetStatusBadgeClass(incident.Status) text-xs">
                                        @incident.StatusName
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <select value="@(string.IsNullOrEmpty(incident.AssignedToId) ? "" : incident.AssignedToId)" @onchange="(e) => AssignTechnician(incident.Id, e)" class="w-full px-2 py-1 border border-gray-300 rounded text-xs focus:ring-2 focus:ring-blue-500">
                                        <option value="">-- Sin asignar --</option>
                                        @foreach (var tech in technicians)
                                        {
                                            <option value="@tech.Id">@tech.FirstName @tech.LastName</option>
                                        }
                                    </select>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <button @onclick="() => OpenDetailModal(incident.Id)" class="text-blue-600 hover:text-blue-800 font-semibold text-xs inline-flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                            Ver
                                        </button>
                                        @if (superAdminMode)
                                        {
                                            <button @onclick="() => ConfirmDeleteIncident(incident)" class="text-red-600 hover:text-red-800 font-semibold text-xs inline-flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                Eliminar
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-12 text-center">
                    <svg class="w-24 h-24 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <p class="text-gray-500 text-lg font-medium">No hay incidentes para mostrar</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de Confirmación de Eliminación -->
@if (showDeleteModal && incidentToDelete != null)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5); z-index: 9999;" @onclick="CloseDeleteModal">
        <div style="position: relative; top: 150px; max-width: 450px; margin: 0 auto; background: white; padding: 24px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);" @onclick:stopPropagation="true">
            <div class="text-center">
                <div class="mx-auto flex items-center justify-center h-14 w-14 rounded-full bg-red-100 mb-4">
                    <svg class="h-7 w-7 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Eliminar Incidente</h3>
                <p class="text-gray-600 mb-6">
                    ¿Estás seguro de que deseas eliminar el ticket <strong class="text-blue-600">@incidentToDelete.TicketNumber</strong>? Esta acción no se puede deshacer.
                </p>
                <div class="flex justify-center gap-3">
                    <button @onclick="CloseDeleteModal" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-semibold transition-all duration-200">
                        Cancelar
                    </button>
                    <button @onclick="DeleteIncident" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-semibold transition-all duration-200">
                        Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal de Detalle del Incidente -->
@if (showDetailModal && selectedIncident != null)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5); z-index: 9999; overflow-y: auto;" @onclick="CloseDetailModal">
        <div style="position: relative; top: 40px; max-width: 900px; margin: 0 auto 40px auto; background: white; border-radius: 16px; box-shadow: 0 25px 50px rgba(0,0,0,0.25);" @onclick:stopPropagation="true">
            <!-- Header del Modal -->
            <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white p-6 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                        </svg>
                        <div>
                            <h2 class="text-xl font-bold">@selectedIncident.TicketNumber</h2>
                            <p class="text-blue-100 text-sm">Detalle del Incidente</p>
                        </div>
                    </div>
                    <button @onclick="CloseDetailModal" class="text-white hover:text-gray-200 p-1">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Contenido del Modal -->
            <div class="p-6 space-y-6">
                <!-- Título y Descripción -->
                <div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2">@selectedIncident.Title</h3>
                    <p class="text-gray-600 whitespace-pre-wrap bg-gray-50 rounded-lg p-4 border border-gray-200">@selectedIncident.Description</p>
                </div>

                <!-- Información del Usuario -->
                <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="font-semibold text-blue-800">Reportado por</span>
                    </div>
                    <div class="text-gray-700">
                        <div class="font-medium">@selectedIncident.UserName</div>
                        <div class="text-sm text-gray-500">@selectedIncident.UserEmail</div>
                    </div>
                </div>

                <!-- Campos Editables -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Servicio -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                            </svg>
                            Servicio
                        </label>
                        <select @bind="editServiceId" class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                            @foreach (var service in services)
                            {
                                <option value="@service.Id">@service.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Tipo -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            Tipo
                        </label>
                        <select @bind="editType" class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                            <option value="@IncidentType.Failure">Falla</option>
                            <option value="@IncidentType.Query">Consulta</option>
                            <option value="@IncidentType.Request">Requerimiento</option>
                        </select>
                    </div>

                    <!-- Prioridad -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                            Prioridad
                        </label>
                        <select @bind="editPriority" class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                            <option value="@IncidentPriority.Low">Baja</option>
                            <option value="@IncidentPriority.Medium">Media</option>
                            <option value="@IncidentPriority.High">Alta</option>
                            <option value="@IncidentPriority.Critical">Crítica</option>
                        </select>
                    </div>
                </div>

                <!-- Estado Actual y Fechas -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        <div class="text-sm font-semibold text-gray-600 mb-1">Estado Actual</div>
                        <span class="@GetStatusBadgeClass(selectedIncident.Status)">@selectedIncident.StatusName</span>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        <div class="text-sm font-semibold text-gray-600 mb-1">Fecha de Creación</div>
                        <div class="font-medium text-gray-900">@FormatLocalDateTime(selectedIncident.CreatedAt)</div>
                    </div>
                    <!-- Nivel de Escalamiento -->
                    <div class="@(selectedIncident.CurrentEscalationLevelId.HasValue ? "bg-orange-50 border-orange-200" : "bg-gray-50 border-gray-200") rounded-lg p-4 border">
                        <div class="text-sm font-semibold @(selectedIncident.CurrentEscalationLevelId.HasValue ? "text-orange-700" : "text-gray-600") mb-1">Nivel de Escalamiento</div>
                        @if (selectedIncident.CurrentEscalationLevelId.HasValue)
                        {
                            <div class="flex items-center gap-2">
                                <span class="bg-orange-100 text-orange-800 px-2 py-0.5 rounded-full text-xs font-semibold">Nivel @selectedIncident.CurrentEscalationLevelOrder</span>
                                <span class="font-medium text-orange-800 text-sm">@selectedIncident.CurrentEscalationLevelName</span>
                            </div>
                        }
                        else
                        {
                            <span class="text-gray-500 text-sm">Sin escalar</span>
                        }
                    </div>
                </div>

                <!-- Botón de Escalar -->
                @if (selectedIncident.Status != IncidentStatus.Closed && selectedIncident.Status != IncidentStatus.Resolved)
                {
                    <div class="flex justify-end">
                        <button @onclick="OpenEscalateModal" class="px-4 py-2 bg-white border-2 border-amber-500 text-amber-700 rounded-lg hover:bg-amber-50 hover:border-amber-600 hover:text-amber-800 font-semibold transition-all duration-200 inline-flex items-center gap-2 shadow-sm">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                            </svg>
                            Escalar Incidente
                        </button>
                    </div>
                }

                <!-- Sección de Comentarios (Acordeón) -->
                <div class="border-t border-gray-200 pt-4">
                    <button @onclick="() => commentsExpanded = !commentsExpanded" class="w-full flex items-center justify-between p-3 bg-gray-50 hover:bg-gray-100 rounded-lg transition-all duration-200">
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                            </svg>
                            <h4 class="text-lg font-bold text-gray-900">Comentarios</h4>
                            <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">@incidentComments.Count</span>
                        </div>
                        <svg class="w-5 h-5 text-gray-500 transition-transform duration-200 @(commentsExpanded ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    @if (commentsExpanded)
                    {
                        <div class="mt-4">
                            <!-- Formulario para agregar comentario -->
                            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 mb-4">
                                <textarea @bind="newComment" placeholder="Escribe un comentario..." rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm resize-none"></textarea>
                                <div class="flex items-center justify-between mt-3">
