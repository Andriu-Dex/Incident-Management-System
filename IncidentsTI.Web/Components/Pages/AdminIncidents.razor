                                                <div class="w-2 h-2 rounded-full bg-white"></div>
                                            </div>
                                            <div class="bg-orange-50 rounded-lg p-3 border border-orange-200">
                                                <div class="flex items-center justify-between mb-1">
                                                    <span class="font-semibold text-sm text-gray-900">@escalation.FromUserName</span>
                                                    <span class="text-xs text-gray-500">@FormatLocalDateTime(escalation.EscalatedAt)</span>
