<!-- Modal de Escalamiento -->
<IncidentsTI.Web.Components.Shared.EscalateIncidentModal
    IsVisible="@showEscalateModal"
    IncidentId="@(selectedIncident?.Id ?? 0)"
    UserId="@(currentUserId ?? string.Empty)"
    CurrentLevel="@currentEscalationLevel"
    OnClose="@CloseEscalateModal"
    OnEscalated="@OnIncidentEscalated" />

@code {
    private List<IncidentListDto> incidents = new();
    private List<IncidentListDto> filteredIncidents = new();
    private List<UserDto> technicians = new();
    private List<ServiceDto> services = new();
    private string? currentUserId;
    
    private string statusFilter = "";
    private string priorityFilter = "";
    private string assignmentFilter = "";
    
    // Super Admin Mode
    private bool superAdminMode = false;
    private bool showDeleteModal = false;
    private IncidentListDto? incidentToDelete;

    // Modal de detalle
    private bool showDetailModal = false;
    private IncidentDto? selectedIncident;
    private int editServiceId;
    private IncidentType editType;
    private IncidentPriority editPriority;
    
    // Historial y Comentarios
    private List<IncidentHistoryDto> incidentHistory = new();
    private List<IncidentCommentDto> incidentComments = new();
    private string newComment = "";
    private bool isInternalComment = false;
    private bool commentsExpanded = false;
    private bool historyExpanded = false;
    
    // Escalamiento
    private List<IncidentEscalationDto> incidentEscalations = new();
    private bool escalationHistoryExpanded = false;
    private bool showEscalateModal = false;
    private EscalationLevelDto? currentEscalationLevel;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        
        await LoadData();
        await LoadServices();
    }

    private async Task LoadServices()
    {
        var query = new GetActiveServicesQuery();
        services = (await Mediator.Send(query)).ToList();
    }

    private async Task OpenDetailModal(int incidentId)
    {
        var query = new GetIncidentByIdQuery { Id = incidentId };
        selectedIncident = await Mediator.Send(query);
        
        if (selectedIncident != null)
        {
            editServiceId = selectedIncident.ServiceId;
            editType = selectedIncident.Type;
            editPriority = selectedIncident.Priority;
            
            // Cargar historial, comentarios y escalamientos
            await LoadIncidentHistory(incidentId);
            await LoadIncidentComments(incidentId);
            await LoadEscalationHistory();
            
            showDetailModal = true;
        }
    }

    private async Task LoadIncidentHistory(int incidentId)
    {
        var historyQuery = new GetIncidentHistoryQuery(incidentId);
        incidentHistory = (await Mediator.Send(historyQuery)).ToList();
    }

    private async Task LoadIncidentComments(int incidentId)
    {
        var commentsQuery = new GetIncidentCommentsQuery(incidentId, true);
        incidentComments = (await Mediator.Send(commentsQuery)).ToList();
    }

    private async Task LoadEscalationHistory()
    {
        if (selectedIncident == null) return;
        
        try
        {
            var query = new GetIncidentEscalationHistoryQuery { IncidentId = selectedIncident.Id };
            incidentEscalations = (await Mediator.Send(query)).ToList();
        }
        catch
        {
            incidentEscalations = new();
        }
    }

    private async Task AddComment()
    {
        if (selectedIncident == null || string.IsNullOrWhiteSpace(newComment) || string.IsNullOrEmpty(currentUserId)) return;

        try
        {
            var command = new AddCommentCommand
            {
                IncidentId = selectedIncident.Id,
                Content = newComment,
                UserId = currentUserId,
                IsInternal = isInternalComment
            };

            await Mediator.Send(command);
            ToastService.ShowSuccess("Comentario agregado");
            
            newComment = "";
            isInternalComment = false;
            await LoadIncidentComments(selectedIncident.Id);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
        selectedIncident = null;
        incidentHistory = new();
        incidentComments = new();
        newComment = "";
        isInternalComment = false;
        commentsExpanded = false;
        historyExpanded = false;
    }

    private async Task SaveChanges()
    {
        if (selectedIncident == null || string.IsNullOrEmpty(currentUserId)) return;

        try
        {
            bool hasChanges = false;

            // Actualizar servicio si cambió
            if (editServiceId != selectedIncident.ServiceId)
            {
                var serviceCommand = new UpdateIncidentServiceCommand
                {
                    IncidentId = selectedIncident.Id,
                    NewServiceId = editServiceId,
                    UserId = currentUserId
                };
                await Mediator.Send(serviceCommand);
                hasChanges = true;
            }

            // Actualizar tipo si cambió
            if (editType != selectedIncident.Type)
            {
                var typeCommand = new UpdateIncidentTypeCommand
                {
                    IncidentId = selectedIncident.Id,
                    NewType = editType,
                    UserId = currentUserId
                };
                await Mediator.Send(typeCommand);
                hasChanges = true;
            }

            // Actualizar prioridad si cambió
            if (editPriority != selectedIncident.Priority)
            {
                var priorityCommand = new UpdateIncidentPriorityCommand
                {
                    IncidentId = selectedIncident.Id,
                    NewPriority = editPriority,
                    UserId = currentUserId
                };
                await Mediator.Send(priorityCommand);
                hasChanges = true;
            }

            if (hasChanges)
            {
                ToastService.ShowSuccess("Cambios guardados correctamente");
                await LoadData();
                ApplyFilters();
            }
            
            CloseDetailModal();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error al guardar: {ex.Message}");
        }
    }

    private async Task ToggleSuperAdminMode()
    {
        superAdminMode = !superAdminMode;
        
        await InvokeAsync(() =>
        {
            if (superAdminMode)
            {
                ToastService.ShowWarning("Modo Super Admin Activado");
            }
            else
            {
                ToastService.ShowInfo("Modo Super Admin Desactivado");
            }
            StateHasChanged();
        });
    }

    private void ConfirmDeleteIncident(IncidentListDto incident)
    {
        incidentToDelete = incident;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        incidentToDelete = null;
    }

    private async Task DeleteIncident()
    {
        if (incidentToDelete == null) return;

        try
        {
            var command = new DeleteIncidentCommand { IncidentId = incidentToDelete.Id };
            var result = await Mediator.Send(command);

            if (result)
            {
                ToastService.ShowSuccess($"Ticket {incidentToDelete.TicketNumber} eliminado");
                CloseDeleteModal();
                await LoadData();
                ApplyFilters();
            }
            else
            {
                ToastService.ShowError("No se pudo eliminar el incidente");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private async Task LoadData()
    {
        // Load all incidents
        var incidentsQuery = new GetAllIncidentsQuery();
        incidents = (await Mediator.Send(incidentsQuery)).ToList();
        filteredIncidents = incidents;

        // Load technicians and administrators
        var usersQuery = new GetAllUsersQuery();
        var allUsers = await Mediator.Send(usersQuery);
        technicians = allUsers.Where(u => u.Roles.Contains("Technician") || u.Roles.Contains("Administrator")).ToList();
    }

    private void ApplyFilters()
    {
        filteredIncidents = incidents;

        if (!string.IsNullOrEmpty(statusFilter) && Enum.TryParse<IncidentStatus>(statusFilter, out var status))
        {
            filteredIncidents = filteredIncidents.Where(i => i.Status == status).ToList();
        }

        if (!string.IsNullOrEmpty(priorityFilter) && Enum.TryParse<IncidentPriority>(priorityFilter, out var priority))
        {
            filteredIncidents = filteredIncidents.Where(i => i.Priority == priority).ToList();
        }

        if (assignmentFilter == "unassigned")
        {
            filteredIncidents = filteredIncidents.Where(i => string.IsNullOrEmpty(i.AssignedToName)).ToList();
        }
        else if (assignmentFilter == "assigned")
        {
            filteredIncidents = filteredIncidents.Where(i => !string.IsNullOrEmpty(i.AssignedToName)).ToList();
        }
    }

    private void ClearFilters()
    {
        statusFilter = "";
        priorityFilter = "";
        assignmentFilter = "";
        filteredIncidents = incidents;
    }

    private async Task AssignTechnician(int incidentId, ChangeEventArgs e)
    {
        var technicianId = e.Value?.ToString();

        try
        {
            if (string.IsNullOrEmpty(technicianId))
            {
                // Unassign
                var command = new AssignIncidentCommand
                {
                    IncidentId = incidentId,
                    AssignedToId = "",
                    UserId = currentUserId ?? string.Empty
                };
                await Mediator.Send(command);
                ToastService.ShowSuccess("Incidente desasignado");
            }
            else
            {
                var command = new AssignIncidentCommand
                {
                    IncidentId = incidentId,
                    AssignedToId = technicianId,
                    UserId = currentUserId ?? string.Empty
                };
                await Mediator.Send(command);
                ToastService.ShowSuccess("Técnico asignado");
            }

            await LoadData();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private string GetStatusBadgeClass(IncidentStatus status)
    {
        return status switch
        {
            IncidentStatus.Open => "px-2 py-1 font-semibold rounded-full bg-green-100 text-green-800 border border-green-300",
            IncidentStatus.InProgress => "px-2 py-1 font-semibold rounded-full bg-yellow-100 text-yellow-800 border border-yellow-300",
            IncidentStatus.Escalated => "px-2 py-1 font-semibold rounded-full bg-orange-100 text-orange-800 border border-orange-300",
            IncidentStatus.Resolved => "px-2 py-1 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-300",
            IncidentStatus.Closed => "px-2 py-1 font-semibold rounded-full bg-gray-100 text-gray-800 border border-gray-300",
            _ => "px-2 py-1 font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }

    private string GetPriorityBadgeClass(IncidentPriority priority)
    {
        return priority switch
        {
            IncidentPriority.Low => "px-2 py-1 font-semibold rounded-full bg-green-100 text-green-800 border border-green-300",
            IncidentPriority.Medium => "px-2 py-1 font-semibold rounded-full bg-yellow-100 text-yellow-800 border border-yellow-300",
            IncidentPriority.High => "px-2 py-1 font-semibold rounded-full bg-orange-100 text-orange-800 border border-orange-300",
            IncidentPriority.Critical => "px-2 py-1 font-semibold rounded-full bg-red-100 text-red-800 border border-red-300",
            _ => "px-2 py-1 font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }

    private string GetHistoryIconColor(HistoryAction action)
    {
        return action switch
        {
            HistoryAction.Created => "bg-green-500",
            HistoryAction.StatusChanged => "bg-blue-500",
            HistoryAction.PriorityChanged => "bg-orange-500",
            HistoryAction.Assigned => "bg-purple-500",
            HistoryAction.Reassigned => "bg-gray-500",
            HistoryAction.ServiceChanged => "bg-teal-500",
            HistoryAction.TypeChanged => "bg-indigo-500",
            HistoryAction.CommentAdded => "bg-cyan-500",
            HistoryAction.Escalated => "bg-red-500",
            HistoryAction.DetailsUpdated => "bg-amber-500",
            _ => "bg-gray-400"
        };
    }

    private string GetHistoryTextColor(HistoryAction action)
    {
        return action switch
        {
            HistoryAction.Created => "text-green-600",
            HistoryAction.StatusChanged => "text-blue-600",
            HistoryAction.PriorityChanged => "text-orange-600",
            HistoryAction.Assigned => "text-purple-600",
            HistoryAction.Reassigned => "text-gray-600",
            HistoryAction.ServiceChanged => "text-teal-600",
            HistoryAction.TypeChanged => "text-indigo-600",
            HistoryAction.CommentAdded => "text-cyan-600",
            HistoryAction.Escalated => "text-red-600",
            HistoryAction.DetailsUpdated => "text-amber-600",
            _ => "text-gray-600"
        };
    }

    private string GetHistoryActionName(HistoryAction action)
    {
        return action switch
        {
            HistoryAction.Created => "Creado",
            HistoryAction.StatusChanged => "Estado Cambiado",
            HistoryAction.PriorityChanged => "Prioridad Cambiada",
            HistoryAction.Assigned => "Asignado",
            HistoryAction.Reassigned => "Reasignado",
            HistoryAction.ServiceChanged => "Servicio Cambiado",
            HistoryAction.TypeChanged => "Tipo Cambiado",
            HistoryAction.CommentAdded => "Comentario Agregado",
            HistoryAction.Escalated => "Escalado",
            HistoryAction.DetailsUpdated => "Detalles Actualizados",
            _ => "Acción"
        };
    }

    // Métodos de Escalamiento
    private void OpenEscalateModal()
    {
        if (selectedIncident?.CurrentEscalationLevelId.HasValue == true)
        {
            currentEscalationLevel = new EscalationLevelDto
            {
                Id = selectedIncident.CurrentEscalationLevelId.Value,
                Name = selectedIncident.CurrentEscalationLevelName ?? "",
                Order = selectedIncident.CurrentEscalationLevelOrder ?? 0
            };
        }
        else
        {
            currentEscalationLevel = null;
        }
        showEscalateModal = true;
    }

    private void CloseEscalateModal()
    {
        showEscalateModal = false;
    }

    private async Task OnIncidentEscalated()
    {
        showEscalateModal = false;
        
        // Recargar el incidente y su historial
        if (selectedIncident != null)
        {
            var query = new GetIncidentByIdQuery { Id = selectedIncident.Id };
            selectedIncident = await Mediator.Send(query);
            await LoadIncidentHistory(selectedIncident.Id);
            await LoadEscalationHistory();
        }
        
        await LoadData();
        ToastService.ShowSuccess("Incidente escalado correctamente");
    }
    
    // Convierte UTC a hora de Ecuador (UTC-5)
    private static readonly TimeZoneInfo EcuadorTimeZone = TimeZoneInfo.CreateCustomTimeZone(
        "Ecuador Time", 
        TimeSpan.FromHours(-5), 
        "Ecuador Time", 
        "Ecuador Time");
    
    private string FormatLocalDateTime(DateTime utcDateTime)
    {
        var localTime = TimeZoneInfo.ConvertTimeFromUtc(utcDateTime, EcuadorTimeZone);
        return localTime.ToString("dd/MM/yyyy HH:mm");
    }
}
