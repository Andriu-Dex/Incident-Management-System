                                <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-orange-200"></div>
                                <div class="space-y-4">
                                    @foreach (var escalation in incidentEscalations.OrderByDescending(e => e.EscalatedAt))
                                    {
