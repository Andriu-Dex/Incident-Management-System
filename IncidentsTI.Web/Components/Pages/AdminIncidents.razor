@page "/admin/incidents"
@using IncidentsTI.Application.Commands
@using IncidentsTI.Application.DTOs
@using IncidentsTI.Application.DTOs.Users
@using IncidentsTI.Application.Queries
@using IncidentsTI.Application.Features.Users.Queries
@using IncidentsTI.Domain.Enums
@using MediatR
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject IToastService ToastService
@rendermode InteractiveServer

<PageTitle>Gesti√≥n de Incidentes - Sistema de Incidentes TI</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-2">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
                <h1 class="text-3xl font-bold text-gray-900">Gesti√≥n de Incidentes</h1>
            </div>
            <p class="text-gray-600">Administra todos los incidentes del sistema</p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
            <div class="bg-white rounded-xl p-6 border-2 border-blue-200 shadow-sm">
                <div class="text-blue-600 text-sm font-semibold mb-1">Total</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count()</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-green-200 shadow-sm">
                <div class="text-green-600 text-sm font-semibold mb-1">Abiertos</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.Open)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-yellow-200 shadow-sm">
                <div class="text-yellow-600 text-sm font-semibold mb-1">En Progreso</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.InProgress)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-orange-200 shadow-sm">
                <div class="text-orange-600 text-sm font-semibold mb-1">Sin Asignar</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => string.IsNullOrEmpty(i.AssignedToName))</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-gray-200 shadow-sm">
                <div class="text-gray-600 text-sm font-semibold mb-1">Cerrados</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.Closed)</div>
            </div>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Estado</label>
                    <select @bind="statusFilter" @bind:after="ApplyFilters" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todos</option>
                        <option value="@IncidentStatus.Open">Abierto</option>
                        <option value="@IncidentStatus.InProgress">En Progreso</option>
                        <option value="@IncidentStatus.Escalated">Escalado</option>
                        <option value="@IncidentStatus.Resolved">Resuelto</option>
                        <option value="@IncidentStatus.Closed">Cerrado</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Prioridad</label>
                    <select @bind="priorityFilter" @bind:after="ApplyFilters" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todas</option>
                        <option value="@IncidentPriority.Low">Baja</option>
                        <option value="@IncidentPriority.Medium">Media</option>
                        <option value="@IncidentPriority.High">Alta</option>
                        <option value="@IncidentPriority.Critical">Cr√≠tica</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Asignaci√≥n</label>
                    <select @bind="assignmentFilter" @bind:after="ApplyFilters" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todos</option>
                        <option value="unassigned">Sin Asignar</option>
                        <option value="assigned">Asignados</option>
                    </select>
                </div>
                <div class="flex items-end">
                    <button @onclick="ClearFilters" class="w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-200 font-semibold">
                        üîÑ Limpiar
                    </button>
                </div>
            </div>
        </div>

        <!-- Incidents Table -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            @if (filteredIncidents.Any())
            {
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-blue-50 to-indigo-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Ticket</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">T√≠tulo</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Usuario</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Prioridad</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Estado</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Asignado</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var incident in filteredIncidents)
                        {
                            <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="font-mono text-xs font-semibold text-blue-600">@incident.TicketNumber</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-gray-900 max-w-xs truncate">@incident.Title</div>
                                    <div class="text-xs text-gray-500">@incident.ServiceName</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    @incident.UserName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@GetPriorityBadgeClass(incident.Priority) text-xs">
                                        @incident.PriorityName
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@GetStatusBadgeClass(incident.Status) text-xs">
                                        @incident.StatusName
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <select value="@incident.AssignedToName" @onchange="(e) => AssignTechnician(incident.Id, e)" class="w-full px-2 py-1 border border-gray-300 rounded text-xs focus:ring-2 focus:ring-blue-500">
                                        <option value="">-- Sin asignar --</option>
                                        @foreach (var tech in technicians)
                                        {
                                            <option value="@tech.Id">@tech.FirstName @tech.LastName</option>
                                        }
                                    </select>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <button @onclick="() => ViewDetail(incident.Id)" class="text-blue-600 hover:text-blue-800 font-semibold text-xs">
                                        üëÅÔ∏è Ver
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-12 text-center">
                    <div class="text-6xl mb-4">üì≠</div>
                    <p class="text-gray-500 text-lg font-medium">No hay incidentes para mostrar</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<IncidentListDto> incidents = new();
    private List<IncidentListDto> filteredIncidents = new();
    private List<UserDto> technicians = new();
    
    private string statusFilter = "";
    private string priorityFilter = "";
    private string assignmentFilter = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        // Load all incidents
        var incidentsQuery = new GetAllIncidentsQuery();
        incidents = (await Mediator.Send(incidentsQuery)).ToList();
        filteredIncidents = incidents;

        // Load technicians and administrators
        var usersQuery = new GetAllUsersQuery();
        var allUsers = await Mediator.Send(usersQuery);
        technicians = allUsers.Where(u => u.Roles.Contains("Technician") || u.Roles.Contains("Administrator")).ToList();
    }

    private void ApplyFilters()
    {
        filteredIncidents = incidents;

        if (!string.IsNullOrEmpty(statusFilter) && Enum.TryParse<IncidentStatus>(statusFilter, out var status))
        {
            filteredIncidents = filteredIncidents.Where(i => i.Status == status).ToList();
        }

        if (!string.IsNullOrEmpty(priorityFilter) && Enum.TryParse<IncidentPriority>(priorityFilter, out var priority))
        {
            filteredIncidents = filteredIncidents.Where(i => i.Priority == priority).ToList();
        }

        if (assignmentFilter == "unassigned")
        {
            filteredIncidents = filteredIncidents.Where(i => string.IsNullOrEmpty(i.AssignedToName)).ToList();
        }
        else if (assignmentFilter == "assigned")
        {
            filteredIncidents = filteredIncidents.Where(i => !string.IsNullOrEmpty(i.AssignedToName)).ToList();
        }
    }

    private void ClearFilters()
    {
        statusFilter = "";
        priorityFilter = "";
        assignmentFilter = "";
        filteredIncidents = incidents;
    }

    private async Task AssignTechnician(int incidentId, ChangeEventArgs e)
    {
        var technicianId = e.Value?.ToString();

        try
        {
            if (string.IsNullOrEmpty(technicianId))
            {
                // Unassign
                var command = new AssignIncidentCommand
                {
                    IncidentId = incidentId,
                    AssignedToId = ""
                };
                await Mediator.Send(command);
                ToastService.ShowSuccess("‚úì Incidente desasignado");
            }
            else
            {
                var command = new AssignIncidentCommand
                {
                    IncidentId = incidentId,
                    AssignedToId = technicianId
                };
                await Mediator.Send(command);
                ToastService.ShowSuccess("‚úì T√©cnico asignado");
            }

            await LoadData();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private void ViewDetail(int id)
    {
        Navigation.NavigateTo($"/incidents/{id}");
    }

    private string GetStatusBadgeClass(IncidentStatus status)
    {
        return status switch
        {
            IncidentStatus.Open => "px-2 py-1 font-semibold rounded-full bg-green-100 text-green-800 border border-green-300",
            IncidentStatus.InProgress => "px-2 py-1 font-semibold rounded-full bg-yellow-100 text-yellow-800 border border-yellow-300",
            IncidentStatus.Escalated => "px-2 py-1 font-semibold rounded-full bg-orange-100 text-orange-800 border border-orange-300",
            IncidentStatus.Resolved => "px-2 py-1 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-300",
            IncidentStatus.Closed => "px-2 py-1 font-semibold rounded-full bg-gray-100 text-gray-800 border border-gray-300",
            _ => "px-2 py-1 font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }

    private string GetPriorityBadgeClass(IncidentPriority priority)
    {
        return priority switch
        {
            IncidentPriority.Low => "px-2 py-1 font-semibold rounded-full bg-green-100 text-green-800 border border-green-300",
            IncidentPriority.Medium => "px-2 py-1 font-semibold rounded-full bg-yellow-100 text-yellow-800 border border-yellow-300",
            IncidentPriority.High => "px-2 py-1 font-semibold rounded-full bg-orange-100 text-orange-800 border border-orange-300",
            IncidentPriority.Critical => "px-2 py-1 font-semibold rounded-full bg-red-100 text-red-800 border border-red-300",
            _ => "px-2 py-1 font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }
}
