@page "/incidents/{id:int}"
@using IncidentsTI.Application.Commands
@using IncidentsTI.Application.DTOs
@using IncidentsTI.Application.DTOs.Escalation
@using IncidentsTI.Application.DTOs.Knowledge
@using IncidentsTI.Application.Queries
@using IncidentsTI.Domain.Enums
@using MediatR
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@attribute [Authorize]
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<PageTitle>Detalle del Incidente - Sistema de Incidentes TI</PageTitle>

@if (incident == null)
{
    <div class="flex items-center justify-center min-h-screen">
        <div class="text-center">
            <svg class="animate-spin h-16 w-16 mx-auto mb-4 text-blue-600" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-gray-600 text-lg">Cargando incidente...</p>
        </div>
    </div>
}
else
{
    <div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-8">
        <div class="max-w-5xl mx-auto">
            <!-- Header -->
            <div class="mb-6">
                <button @onclick="GoBack" class="text-blue-600 hover:text-blue-800 font-semibold mb-4">
                    ← Volver
                </button>
                <div class="flex items-center gap-3 mb-2">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                    </svg>
                    <h1 class="text-3xl font-bold text-gray-900">@incident.TicketNumber</h1>
                </div>
                <p class="text-gray-600">@incident.Title</p>
            </div>

            <!-- Main Content -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Left Column - Details -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Description Card -->
                    <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                        <div class="flex items-center gap-2 mb-4">
                            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                            </svg>
                            <h2 class="text-lg font-bold text-gray-900">Descripción</h2>
                        </div>
                        <p class="text-gray-700 whitespace-pre-wrap leading-relaxed">@incident.Description</p>
                    </div>

                    <!-- Service Card -->
                    <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                        <div class="flex items-center gap-2 mb-4">
                            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            <h2 class="text-lg font-bold text-gray-900">Categorización</h2>
                        </div>
                        
                        <!-- Contenedor visual mejorado para Servicio y Tipo -->
                        <div class="flex flex-wrap gap-4 p-4 bg-gray-50 rounded-xl border border-gray-100">
                            <!-- Servicio -->
                            <div class="flex items-center gap-3 flex-1 min-w-[180px]">
                                <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center flex-shrink-0">
                                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                                    </svg>
                                </div>
                                <div>
                                    <span class="text-xs text-gray-500 block font-medium">Servicio</span>
                                    <span class="text-sm font-semibold text-blue-700">@incident.ServiceName</span>
                                    @if (!string.IsNullOrEmpty(incident.ServiceCategory))
                                    {
                                        <span class="text-xs text-gray-500 block">@incident.ServiceCategory</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="w-px bg-gray-200 self-stretch hidden sm:block"></div>
                            
                            <!-- Tipo de Incidente -->
                            <div class="flex items-center gap-3 flex-1 min-w-[180px]">
                                <div class="w-10 h-10 rounded-lg @GetIncidentTypeIconBgClass(incident.Type) flex items-center justify-center flex-shrink-0">
                                    @if (incident.Type == IncidentType.Failure)
                                    {
                                        <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                        </svg>
                                    }
                                    else if (incident.Type == IncidentType.Query)
                                    {
                                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                        </svg>
                                    }
                                </div>
                                <div>
                                    <span class="text-xs text-gray-500 block font-medium">Tipo de problema</span>
                                    <span class="text-sm font-semibold @GetIncidentTypeTextClass(incident.Type)">@incident.TypeName</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Estado del Incidente Card -->
                    <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                        <div class="flex items-center gap-2 mb-4">
                            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <h2 class="text-lg font-bold text-gray-900">Estado del Incidente</h2>
                        </div>
                        
                        <!-- Contenedor visual mejorado para Estado y Prioridad -->
                        <div class="flex flex-wrap gap-4 p-4 bg-gray-50 rounded-xl border border-gray-100">
                            <!-- Estado -->
                            <div class="flex items-center gap-3 flex-1 min-w-[180px]">
                                <div class="w-10 h-10 rounded-lg @GetStatusIconBgClass(incident.Status) flex items-center justify-center flex-shrink-0">
                                    @if (incident.Status == IncidentStatus.Open)
                                    {
                                        <svg class="w-5 h-5 @GetStatusIconClass(incident.Status)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    }
                                    else if (incident.Status == IncidentStatus.InProgress)
                                    {
                                        <svg class="w-5 h-5 @GetStatusIconClass(incident.Status)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.933 12.8a1 1 0 000-1.6L6.6 7.2A1 1 0 005 8v8a1 1 0 001.6.8l5.333-4zM19.933 12.8a1 1 0 000-1.6l-5.333-4A1 1 0 0013 8v8a1 1 0 001.6.8l5.333-4z" />
                                        </svg>
                                    }
                                    else if (incident.Status == IncidentStatus.Escalated)
                                    {
                                        <svg class="w-5 h-5 @GetStatusIconClass(incident.Status)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                        </svg>
                                    }
                                    else if (incident.Status == IncidentStatus.Resolved)
                                    {
                                        <svg class="w-5 h-5 @GetStatusIconClass(incident.Status)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5 @GetStatusIconClass(incident.Status)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                    }
                                </div>
                                <div>
                                    <span class="text-xs text-gray-500 block font-medium">Estado actual</span>
                                    <span class="text-sm font-semibold @GetStatusTextClass(incident.Status)">@incident.StatusName</span>
                                </div>
                            </div>
                            
                            <div class="w-px bg-gray-200 self-stretch hidden sm:block"></div>
                            
                            <!-- Prioridad -->
                            <div class="flex items-center gap-3 flex-1 min-w-[180px]">
                                <div class="w-10 h-10 rounded-lg @GetPriorityIconBgClass(incident.Priority) flex items-center justify-center flex-shrink-0">
                                    @if (incident.Priority == IncidentPriority.Low)
                                    {
                                        <svg class="w-5 h-5 @GetPriorityIconClass(incident.Priority)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                                        </svg>
                                    }
                                    else if (incident.Priority == IncidentPriority.Medium)
                                    {
                                        <svg class="w-5 h-5 @GetPriorityIconClass(incident.Priority)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                                        </svg>
                                    }
                                    else if (incident.Priority == IncidentPriority.High)
                                    {
                                        <svg class="w-5 h-5 @GetPriorityIconClass(incident.Priority)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5 @GetPriorityIconClass(incident.Priority)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                        </svg>
                                    }
                                </div>
                                <div>
                                    <span class="text-xs text-gray-500 block font-medium">Prioridad</span>
                                    <span class="text-sm font-semibold @GetPriorityTextClass(incident.Priority)">@incident.PriorityName</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column - Info -->
                <div class="space-y-6">
                    <!-- Reporter Card -->
                    <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                        <div class="flex items-center gap-2 mb-3">
                            <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <h3 class="text-sm font-bold text-gray-700">Reportado por</h3>
                        </div>
                        <div class="text-sm">
                            <div class="font-semibold text-gray-900">@incident.UserName</div>
                            <div class="text-gray-600">@incident.UserEmail</div>
                        </div>
                    </div>

                    <!-- Assigned Card -->
                    @if (!string.IsNullOrEmpty(incident.AssignedToName))
                    {
                        <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                            <div class="flex items-center gap-2 mb-3">
                                <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                <h3 class="text-sm font-bold text-gray-700">Asignado a</h3>
                            </div>
                            <div class="text-sm">
                                <div class="font-semibold text-gray-900">@incident.AssignedToName</div>
                                <div class="text-gray-600">@incident.AssignedToEmail</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="bg-yellow-50 rounded-xl p-6 border-2 border-yellow-200">
                            <div class="flex items-center gap-2 mb-2">
                                <svg class="w-4 h-4 text-yellow-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                </svg>
                                <h3 class="text-sm font-bold text-yellow-800">Sin asignar</h3>
                            </div>
                            <p class="text-sm text-yellow-700">Este incidente aún no ha sido asignado a un técnico.</p>
                        </div>
                    }

                    <!-- Dates Card -->
                    <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                        <div class="flex items-center gap-2 mb-3">
                            <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <h3 class="text-sm font-bold text-gray-700">Fechas</h3>
                        </div>
                        <div class="space-y-2 text-sm">
                            <div>
                                <div class="text-gray-600">Creado</div>
                                <div class="font-semibold text-gray-900">@FormatLocalDateTime(incident.CreatedAt)</div>
                            </div>
                            @if (incident.UpdatedAt.HasValue)
                            {
                                <div class="pt-2 border-t border-gray-200">
                                    <div class="text-gray-600">Última actualización</div>
                                    <div class="font-semibold text-gray-900">@FormatLocalDateTime(incident.UpdatedAt.Value)</div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Escalation Card -->
                    <div class="@(incident.CurrentEscalationLevelId.HasValue ? "bg-orange-50 border-orange-200" : "bg-white border-gray-200") rounded-xl shadow-md p-6 border">
                        <div class="flex items-center gap-2 mb-3">
                            <svg class="w-4 h-4 @(incident.CurrentEscalationLevelId.HasValue ? "text-orange-600" : "text-gray-700")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                            </svg>
                            <h3 class="text-sm font-bold @(incident.CurrentEscalationLevelId.HasValue ? "text-orange-700" : "text-gray-700")">Nivel de Escalamiento</h3>
                        </div>
                        @if (incident.CurrentEscalationLevelId.HasValue)
                        {
                            <div class="flex items-center gap-2 mb-3">
                                <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded-full text-sm font-semibold">
                                    Nivel @incident.CurrentEscalationLevelOrder
                                </span>
                                <span class="text-sm font-semibold text-orange-800">@incident.CurrentEscalationLevelName</span>
                            </div>
                        }
                        else
                        {
                            <div class="text-sm text-gray-600 mb-3">Sin escalar</div>
                        }
                        
                        @if (isStaff && incident.Status != IncidentStatus.Closed && incident.Status != IncidentStatus.Resolved)
                        {
                            <button @onclick="OpenEscalateModal" 
                                    class="w-full mt-2 px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 font-semibold transition-all duration-200 inline-flex items-center justify-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                                </svg>
                                Escalar Incidente
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Comments Section (Accordion) -->
            <div class="mt-8 bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
                <!-- Accordion Header -->
                <button @onclick="() => isCommentsExpanded = !isCommentsExpanded" 
                        class="w-full flex items-center justify-between p-6 hover:bg-gray-50 transition-colors">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                        </div>
                        <div class="text-left">
                            <h2 class="text-lg font-bold text-gray-900">Comentarios</h2>
                            <span class="text-sm text-gray-500">@comments.Count comentario(s)</span>
                        </div>
                    </div>
                    <div class="flex items-center gap-2">
                        @if (comments.Any(c => c.IsInternal))
                        {
                            <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">
                                @comments.Count(c => c.IsInternal) interno(s)
                            </span>
                        }
                        <svg class="w-5 h-5 text-gray-500 transition-transform duration-200 @(isCommentsExpanded ? "rotate-180" : "")" 
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </div>
                </button>
                
                <!-- Accordion Content -->
                @if (isCommentsExpanded)
                {
                    <div class="px-6 pb-6 border-t border-gray-100">
                        <!-- Add Comment Form -->
                        <div class="mt-4 mb-6 p-4 bg-gray-50 rounded-lg border border-gray-200">
                    <textarea @bind="newComment" 
                              placeholder="Escribe un comentario..."
                              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none"
                              rows="3"></textarea>
                    <div class="flex items-center justify-between mt-3">
                        @if (isStaff)
                        {
                            <label class="flex items-center gap-2 text-sm text-gray-600">
                                <input type="checkbox" @bind="isInternalComment" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500" />
                                <span>Comentario interno (solo visible para TI)</span>
                            </label>
                        }
                        else
                        {
                            <div></div>
                        }
                        <button @onclick="AddComment" 
                                disabled="@string.IsNullOrWhiteSpace(newComment)"
                                class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed font-semibold transition-all duration-200 inline-flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                            </svg>
                            Enviar
                        </button>
                    </div>
                </div>

                <!-- Comments List -->
                @if (comments.Any())
                {
                    <div class="space-y-4 mt-4">
                        @foreach (var comment in comments)
                        {
                            <div class="@(comment.IsInternal ? "bg-yellow-50 border-yellow-200" : "bg-white border-gray-200") p-4 rounded-lg border">
                                <div class="flex items-start justify-between mb-2">
                                    <div class="flex items-center gap-2">
                                        <div class="@(comment.IsFromStaff ? "bg-blue-100 text-blue-600" : "bg-gray-100 text-gray-600") w-8 h-8 rounded-full flex items-center justify-center">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <span class="font-semibold text-gray-900">@comment.UserName</span>
                                            @if (comment.IsFromStaff)
                                            {
                                                <span class="ml-2 px-2 py-0.5 text-xs font-semibold bg-blue-100 text-blue-800 rounded-full">Soporte TI</span>
                                            }
                                            @if (comment.IsInternal)
                                            {
                                                <span class="ml-2 px-2 py-0.5 text-xs font-semibold bg-yellow-100 text-yellow-800 rounded-full">Interno</span>
                                            }
                                        </div>
