    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        isStaff = authState.User.IsInRole("Technician") || authState.User.IsInRole("Administrator");
        
        await LoadIncident();
        await LoadHistory();
        await LoadComments();
        
        // Solo staff necesita ver artículos vinculados y sugerencias
        if (isStaff && incident != null)
        {
            await LoadKnowledgeBaseSuggestions();
            await LoadLinkedArticles();
        }
