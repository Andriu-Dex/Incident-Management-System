        if (incident == null) return;
        
        // Navegar a la página de gestión de KB con parámetros para pre-llenar el formulario
        var queryParams = new Dictionary<string, string?>
        {
            ["fromIncident"] = Id.ToString(),
            ["title"] = incident.Title,
            ["serviceId"] = incident.ServiceId.ToString(),
            ["type"] = incident.Type.ToString(),
            ["problem"] = incident.Description
        };
        
        var queryString = string.Join("&", queryParams
            .Where(kvp => !string.IsNullOrEmpty(kvp.Value))
            .Select(kvp => $"{kvp.Key}={Uri.EscapeDataString(kvp.Value!)}"));
        
        Navigation.NavigateTo($"/technician/knowledge?{queryString}");
