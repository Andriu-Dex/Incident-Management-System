@page "/incidents"
@using IncidentsTI.Application.DTOs
@using IncidentsTI.Application.Queries
@using IncidentsTI.Domain.Enums
@using MediatR
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@attribute [Authorize]
@attribute [StreamRendering(false)]
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Mis Incidentes - Sistema de Incidentes TI</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8 flex justify-between items-center">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                    </svg>
                    <h1 class="text-3xl font-bold text-gray-900">Mis Incidentes</h1>
                </div>
                <p class="text-gray-600">Gestiona tus reportes y solicitudes</p>
            </div>
            <button @onclick="CreateNew" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <span>Nuevo Incidente</span>
            </button>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl p-6 border-2 border-blue-200 shadow-sm">
                <div class="text-blue-600 text-sm font-semibold mb-1">Total</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count()</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-green-200 shadow-sm">
                <div class="text-green-600 text-sm font-semibold mb-1">Abiertos</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.Open)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-yellow-200 shadow-sm">
                <div class="text-yellow-600 text-sm font-semibold mb-1">En Progreso</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.InProgress)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-gray-200 shadow-sm">
                <div class="text-gray-600 text-sm font-semibold mb-1">Cerrados</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.Closed || i.Status == IncidentStatus.Resolved)</div>
            </div>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Estado</label>
                    <select @bind="statusFilter" @bind:after="FilterIncidents" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todos</option>
                        <option value="@IncidentStatus.Open">Abierto</option>
                        <option value="@IncidentStatus.InProgress">En Progreso</option>
                        <option value="@IncidentStatus.Escalated">Escalado</option>
                        <option value="@IncidentStatus.Resolved">Resuelto</option>
                        <option value="@IncidentStatus.Closed">Cerrado</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Prioridad</label>
                    <select @bind="priorityFilter" @bind:after="FilterIncidents" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">Todas</option>
                        <option value="@IncidentPriority.Low">Baja</option>
                        <option value="@IncidentPriority.Medium">Media</option>
                        <option value="@IncidentPriority.High">Alta</option>
                        <option value="@IncidentPriority.Critical">Crítica</option>
                    </select>
                </div>
                <div class="flex items-end">
                    <button @onclick="ClearFilters" class="w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-200 font-semibold flex items-center justify-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Limpiar Filtros
                    </button>
                </div>
            </div>
        </div>

        <!-- Incidents Table -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            @if (filteredIncidents.Any())
            {
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-blue-50 to-indigo-50">
                        <tr>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Ticket</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Título</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Servicio</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Tipo</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Estado</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Prioridad</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var incident in filteredIncidents)
                        {
                            <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200 cursor-pointer" @onclick="() => ViewDetail(incident.Id)">
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <span class="font-mono text-sm font-semibold text-blue-600">@incident.TicketNumber</span>
                                </td>
                                <td class="px-8 py-6">
                                    <div class="text-sm font-medium text-gray-900">@incident.Title</div>
                                </td>
                                <td class="px-8 py-6">
                                    <div class="text-sm text-gray-700">@incident.ServiceName</div>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <span class="@GetTypeBadgeClass(incident.Type)">
                                        @incident.TypeName
                                    </span>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <span class="@GetStatusBadgeClass(incident.Status)">
                                        @incident.StatusName
                                    </span>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <span class="@GetPriorityBadgeClass(incident.Priority)">
                                        @incident.PriorityName
                                    </span>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap text-sm">
                                    <div class="flex items-center gap-3">
                                        <button @onclick="() => ViewDetail(incident.Id)" @onclick:stopPropagation="true" class="text-blue-600 hover:text-blue-800 font-semibold inline-flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                            Ver
                                        </button>
                                        @if (incident.Status == IncidentStatus.Resolved || incident.Status == IncidentStatus.Closed)
                                        {
                                            <button @onclick="() => OpenResolutionModal(incident)" @onclick:stopPropagation="true" 
                                                    class="text-green-600 hover:text-green-800 font-semibold inline-flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                Resolución
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-12 text-center">
                    <svg class="w-24 h-24 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <p class="text-gray-500 text-lg font-medium">No tienes incidentes registrados</p>
                    <button @onclick="CreateNew" class="mt-4 text-blue-600 hover:text-blue-800 font-semibold inline-flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Crear tu primer incidente
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Resolution Modal -->
<IncidentsTI.Web.Components.Shared.IncidentResolutionModal
    IsVisible="@showResolutionModal"
    IncidentId="@selectedIncidentId"
    TicketNumber="@selectedTicketNumber"
    OnClose="@CloseResolutionModal" />

@code {
    private List<IncidentListDto> incidents = new();
    private List<IncidentListDto> filteredIncidents = new();
    private string? currentUserId;
    private string statusFilter = "";
    private string priorityFilter = "";
    private bool isLoading = true;
    
    // Resolution Modal
    private bool showResolutionModal = false;
    private int selectedIncidentId = 0;
    private string selectedTicketNumber = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            currentUserId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            Console.WriteLine($"MyIncidents - UserId: {currentUserId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error obteniendo usuario: {ex.Message}");
        }

        // Suscribirse a cambios de navegación
        Navigation.LocationChanged += OnLocationChanged;
        
        await LoadIncidents();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        // Recargar cuando volvemos a esta página
        InvokeAsync(async () =>
        {
            await LoadIncidents();
            StateHasChanged();
        });
    }

    private async Task LoadIncidents()
    {
        if (string.IsNullOrEmpty(currentUserId))
        {
            Console.WriteLine("LoadIncidents - currentUserId está vacío");
            return;
        }

        try
        {
            isLoading = true;
            Console.WriteLine($"Cargando incidentes para usuario: {currentUserId}");
            var query = new GetUserIncidentsQuery { UserId = currentUserId };
            incidents = (await Mediator.Send(query)).ToList();
            filteredIncidents = incidents;
            Console.WriteLine($"Incidentes cargados: {incidents.Count}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando incidentes: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void FilterIncidents()
    {
        filteredIncidents = incidents;

        if (!string.IsNullOrEmpty(statusFilter) && Enum.TryParse<IncidentStatus>(statusFilter, out var status))
        {
            filteredIncidents = filteredIncidents.Where(i => i.Status == status).ToList();
        }

        if (!string.IsNullOrEmpty(priorityFilter) && Enum.TryParse<IncidentPriority>(priorityFilter, out var priority))
        {
            filteredIncidents = filteredIncidents.Where(i => i.Priority == priority).ToList();
        }
    }

    private void ClearFilters()
    {
        statusFilter = "";
        priorityFilter = "";
        filteredIncidents = incidents;
    }

    private void CreateNew()
    {
        Navigation.NavigateTo("/incidents/new");
    }

    private void ViewDetail(int id)
    {
        Navigation.NavigateTo($"/incidents/{id}");
    }
    
    private void OpenResolutionModal(IncidentListDto incident)
    {
        selectedIncidentId = incident.Id;
        selectedTicketNumber = incident.TicketNumber;
        showResolutionModal = true;
    }
    
    private void CloseResolutionModal()
    {
        showResolutionModal = false;
        selectedIncidentId = 0;
        selectedTicketNumber = "";
    }

    private string GetStatusBadgeClass(IncidentStatus status)
    {
        return status switch
        {
            IncidentStatus.Open => "px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 border-2 border-green-300",
            IncidentStatus.InProgress => "px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 border-2 border-yellow-300",
            IncidentStatus.Escalated => "px-3 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 border-2 border-orange-300",
            IncidentStatus.Resolved => "px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 border-2 border-blue-300",
            IncidentStatus.Closed => "px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800 border-2 border-gray-300",
            _ => "px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }

    private string GetTypeBadgeClass(IncidentType type)
    {
        return type switch
        {
            IncidentType.Failure => "px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 border-2 border-red-300",
            IncidentType.Query => "px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 border-2 border-blue-300",
            IncidentType.Request => "px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 border-2 border-purple-300",
            _ => "px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }

    private string GetPriorityBadgeClass(IncidentPriority priority)
    {
        return priority switch
        {
            IncidentPriority.Low => "px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 border-2 border-green-300",
            IncidentPriority.Medium => "px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 border-2 border-yellow-300",
            IncidentPriority.High => "px-3 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 border-2 border-orange-300",
            IncidentPriority.Critical => "px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 border-2 border-red-300",
            _ => "px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }
}
