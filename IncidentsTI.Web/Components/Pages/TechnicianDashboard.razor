@page "/technician/dashboard"
@using IncidentsTI.Application.Commands
@using IncidentsTI.Application.DTOs
@using IncidentsTI.Application.Queries
@using IncidentsTI.Domain.Enums
@using MediatR
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@attribute [Authorize(Roles = "Technician,Administrator")]
@attribute [StreamRendering(false)]
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Dashboard Técnico - Sistema de Incidentes TI</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-2">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <h1 class="text-3xl font-bold text-gray-900">Dashboard Técnico</h1>
            </div>
            <p class="text-gray-600">Gestiona tus incidentes asignados</p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl p-6 border-2 border-blue-200 shadow-sm">
                <div class="text-blue-600 text-sm font-semibold mb-1">Asignados</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count()</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-yellow-200 shadow-sm">
                <div class="text-yellow-600 text-sm font-semibold mb-1">En Progreso</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.InProgress)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-red-200 shadow-sm">
                <div class="text-red-600 text-sm font-semibold mb-1">Alta Prioridad</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Priority == IncidentPriority.Critical || i.Priority == IncidentPriority.High)</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-green-200 shadow-sm">
                <div class="text-green-600 text-sm font-semibold mb-1">Resueltos</div>
                <div class="text-3xl font-bold text-gray-900">@incidents.Count(i => i.Status == IncidentStatus.Resolved || i.Status == IncidentStatus.Closed)</div>
            </div>
        </div>

        <!-- Incidents Table -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            @if (incidents.Any())
            {
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-blue-50 to-indigo-50">
                        <tr>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase">Ticket</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase">Título</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase">Usuario</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase">Prioridad</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase">Estado</th>
                            <th class="px-8 py-4 text-left text-xs font-bold text-gray-700 uppercase">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var incident in incidents)
                        {
                            <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200">
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <span class="font-mono text-sm font-semibold text-blue-600">@incident.TicketNumber</span>
                                </td>
                                <td class="px-8 py-6">
                                    <div class="text-sm font-medium text-gray-900">@incident.Title</div>
                                    <div class="text-xs text-gray-500">@incident.ServiceName</div>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap text-sm text-gray-700">
                                    @incident.UserName
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <span class="@GetPriorityBadgeClass(incident.Priority)">
                                        @incident.PriorityName
                                    </span>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <select value="@incident.Status" @onchange="(e) => UpdateStatus(incident.Id, e)" class="px-3 py-1 border-2 border-gray-300 rounded-lg text-sm font-semibold focus:ring-2 focus:ring-blue-500">
                                        <option value="@IncidentStatus.Open">Abierto</option>
                                        <option value="@IncidentStatus.InProgress">En Progreso</option>
                                        <option value="@IncidentStatus.Escalated">Escalado</option>
                                        <option value="@IncidentStatus.Resolved">Resuelto</option>
                                        <option value="@IncidentStatus.Closed">Cerrado</option>
                                    </select>
                                </td>
                                <td class="px-8 py-6 whitespace-nowrap">
                                    <button @onclick="() => OpenDetailModal(incident.Id)" class="text-blue-600 hover:text-blue-800 font-semibold mr-4 inline-flex items-center gap-1">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                        Ver
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-12 text-center">
                    <svg class="w-24 h-24 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <p class="text-gray-500 text-lg font-medium">No tienes incidentes asignados</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de Detalle del Incidente -->
@if (showDetailModal && selectedIncident != null)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5); z-index: 9999; overflow-y: auto;" @onclick="CloseDetailModal">
        <div style="position: relative; top: 40px; max-width: 700px; margin: 0 auto 40px auto; background: white; border-radius: 16px; box-shadow: 0 25px 50px rgba(0,0,0,0.25);" @onclick:stopPropagation="true">
            <!-- Header del Modal -->
            <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white p-6 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                        </svg>
                        <div>
                            <h2 class="text-xl font-bold">@selectedIncident.TicketNumber</h2>
                            <p class="text-blue-100 text-sm">Detalle del Incidente</p>
                        </div>
                    </div>
                    <button @onclick="CloseDetailModal" class="text-white hover:text-gray-200 p-1">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Contenido del Modal -->
            <div class="p-6 space-y-6">
                <!-- Título y Descripción -->
                <div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2">@selectedIncident.Title</h3>
                    <p class="text-gray-600 whitespace-pre-wrap bg-gray-50 rounded-lg p-4 border border-gray-200">@selectedIncident.Description</p>
                </div>

                <!-- Información del Usuario -->
                <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="font-semibold text-blue-800">Reportado por</span>
                    </div>
                    <div class="text-gray-700">
                        <div class="font-medium">@selectedIncident.UserName</div>
                        <div class="text-sm text-gray-500">@selectedIncident.UserEmail</div>
                    </div>
                </div>

                <!-- Campos Editables -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Servicio -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                            </svg>
                            Servicio
                        </label>
                        <select @bind="editServiceId" class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                            @foreach (var service in services)
                            {
                                <option value="@service.Id">@service.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Tipo -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            Tipo
                        </label>
                        <select @bind="editType" class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                            <option value="@IncidentType.Failure">Falla</option>
                            <option value="@IncidentType.Query">Consulta</option>
                            <option value="@IncidentType.Request">Requerimiento</option>
                        </select>
                    </div>

                    <!-- Prioridad -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                            Prioridad
                        </label>
                        <select @bind="editPriority" class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                            <option value="@IncidentPriority.Low">Baja</option>
                            <option value="@IncidentPriority.Medium">Media</option>
                            <option value="@IncidentPriority.High">Alta</option>
                            <option value="@IncidentPriority.Critical">Crítica</option>
                        </select>
                    </div>
                </div>

                <!-- Estado Actual y Fechas -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        <div class="text-sm font-semibold text-gray-600 mb-1">Estado Actual</div>
                        <span class="@GetStatusBadgeClass(selectedIncident.Status)">@selectedIncident.StatusName</span>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        <div class="text-sm font-semibold text-gray-600 mb-1">Fecha de Creación</div>
                        <div class="font-medium text-gray-900">@selectedIncident.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
            </div>

            <!-- Footer del Modal -->
            <div class="bg-gray-50 px-6 py-4 rounded-b-2xl flex justify-end gap-3 border-t border-gray-200">
                <button @onclick="CloseDetailModal" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-semibold transition-all duration-200">
                    Cancelar
                </button>
                <button @onclick="SaveChanges" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold transition-all duration-200 inline-flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Guardar Cambios
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<IncidentListDto> incidents = new();
    private List<ServiceDto> services = new();
    private string? currentUserId;
    
    // Modal de detalle
    private bool showDetailModal = false;
    private IncidentDto? selectedIncident;
    private int editServiceId;
    private IncidentType editType;
    private IncidentPriority editPriority;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        
        Console.WriteLine($"TechnicianDashboard - UserId: {currentUserId}");
        
        Navigation.LocationChanged += OnLocationChanged;
        await LoadIncidents();
        await LoadServices();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        if (e.Location.Contains("/technician/dashboard"))
        {
            await LoadIncidents();
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task LoadIncidents()
    {
        if (string.IsNullOrEmpty(currentUserId))
        {
            Console.WriteLine("TechnicianDashboard - currentUserId está vacío");
            return;
        }

        Console.WriteLine($"TechnicianDashboard - Buscando incidentes para userId: {currentUserId}");
        var query = new GetAssignedIncidentsQuery { AssignedToId = currentUserId };
        incidents = (await Mediator.Send(query)).ToList();
        Console.WriteLine($"TechnicianDashboard - Incidentes encontrados: {incidents.Count}");
    }

    private async Task LoadServices()
    {
        var query = new GetActiveServicesQuery();
        services = (await Mediator.Send(query)).ToList();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private async Task OpenDetailModal(int incidentId)
    {
        var query = new GetIncidentByIdQuery { Id = incidentId };
        selectedIncident = await Mediator.Send(query);
        
        if (selectedIncident != null)
        {
            editServiceId = selectedIncident.ServiceId;
            editType = selectedIncident.Type;
            editPriority = selectedIncident.Priority;
            showDetailModal = true;
        }
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
        selectedIncident = null;
    }

    private async Task SaveChanges()
    {
        if (selectedIncident == null) return;

        try
        {
            bool hasChanges = false;

            // Actualizar servicio si cambió
            if (editServiceId != selectedIncident.ServiceId)
            {
                var serviceCommand = new UpdateIncidentServiceCommand
                {
                    IncidentId = selectedIncident.Id,
                    NewServiceId = editServiceId
                };
                await Mediator.Send(serviceCommand);
                hasChanges = true;
            }

            // Actualizar tipo si cambió
            if (editType != selectedIncident.Type)
            {
                var typeCommand = new UpdateIncidentTypeCommand
                {
                    IncidentId = selectedIncident.Id,
                    NewType = editType
                };
                await Mediator.Send(typeCommand);
                hasChanges = true;
            }

            // Actualizar prioridad si cambió
            if (editPriority != selectedIncident.Priority)
            {
                var priorityCommand = new UpdateIncidentPriorityCommand
                {
                    IncidentId = selectedIncident.Id,
                    NewPriority = editPriority
                };
                await Mediator.Send(priorityCommand);
                hasChanges = true;
            }

            if (hasChanges)
            {
                ToastService.ShowSuccess("Cambios guardados correctamente");
                await LoadIncidents();
            }
            
            CloseDetailModal();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error al guardar: {ex.Message}");
        }
    }

    private async Task UpdateStatus(int incidentId, ChangeEventArgs e)
    {
        if (Enum.TryParse<IncidentStatus>(e.Value?.ToString(), out var newStatus))
        {
            try
            {
                var command = new UpdateIncidentStatusCommand
                {
                    IncidentId = incidentId,
                    NewStatus = newStatus
                };

                var success = await Mediator.Send(command);

                if (success)
                {
                    ToastService.ShowSuccess("Estado actualizado");
                    await LoadIncidents();
                }
                else
                {
                    ToastService.ShowError("Error al actualizar el estado");
                }
            }
            catch (Exception ex)
            {
                ToastService.ShowError($"Error: {ex.Message}");
            }
        }
    }

    private string GetPriorityBadgeClass(IncidentPriority priority)
    {
        return priority switch
        {
            IncidentPriority.Low => "px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 border-2 border-green-300",
            IncidentPriority.Medium => "px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 border-2 border-yellow-300",
            IncidentPriority.High => "px-3 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 border-2 border-orange-300",
            IncidentPriority.Critical => "px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 border-2 border-red-300",
            _ => "px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }

    private string GetStatusBadgeClass(IncidentStatus status)
    {
        return status switch
        {
            IncidentStatus.Open => "px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 border-2 border-green-300",
            IncidentStatus.InProgress => "px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 border-2 border-yellow-300",
            IncidentStatus.Escalated => "px-3 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 border-2 border-orange-300",
            IncidentStatus.Resolved => "px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 border-2 border-blue-300",
            IncidentStatus.Closed => "px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800 border-2 border-gray-300",
            _ => "px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }
}
