@page "/reset-password"
@rendermode InteractiveServer
@layout Layout.EmptyLayout
@using Microsoft.JSInterop
@inject IJSRuntime JS
@inject NavigationManager Navigation

<PageTitle>Restablecer Contraseña</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-lg p-8 max-w-md w-full">
        
        @if (isValidating)
        {
            <!-- Loading State -->
            <div class="text-center py-8">
                <div class="flex justify-center mb-4">
                    <svg class="animate-spin h-12 w-12 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
                <p class="text-gray-600">Validando enlace...</p>
            </div>
        }
        else if (!isTokenValid)
        {
            <!-- Invalid Token -->
            <div class="text-center">
                <div class="flex justify-center mb-4">
                    <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                </div>
                
                <h2 class="text-2xl font-bold text-gray-900 mb-2">
                    Enlace no válido
                </h2>
                <p class="text-gray-600 mb-6">
                    @tokenError
                </p>

                <div class="space-y-3">
                    <a href="/forgot-password" 
                       class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Solicitar nuevo enlace
                    </a>

                    <a href="/login" 
                       class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Volver al inicio de sesión
                    </a>
                </div>
            </div>
        }
        else if (passwordChanged)
        {
            <!-- Success State -->
            <div class="text-center">
                <div class="flex justify-center mb-4">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                </div>
                
                <h2 class="text-2xl font-bold text-gray-900 mb-2">
                    ¡Contraseña cambiada!
                </h2>
                <p class="text-gray-600 mb-6">
                    @successMessage
                </p>

                <a href="/login" 
                   class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                    </svg>
                    Iniciar sesión
                </a>
            </div>
        }
        else
        {
            <!-- Reset Password Form -->
            <div class="mb-8">
                <div class="flex justify-center mb-4">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                    </div>
                </div>
                <h2 class="text-2xl font-bold text-gray-900 text-center">
                    Nueva Contraseña
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Cuenta: <span class="font-medium text-gray-900">@maskedEmail</span>
                </p>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded flex items-start" role="alert">
                    <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <span>@errorMessage</span>
                </div>
            }

            <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="space-y-4">
                    <!-- New Password -->
                    <div>
                        <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-1">
                            Nueva Contraseña
                        </label>
                        <div class="relative">
                            <InputText id="newPassword" 
                                       type="@(showPassword ? "text" : "password")" 
                                       @bind-Value="model.NewPassword" 
                                       class="form-input pr-10" 
                                       placeholder="••••••••"
                                       autocomplete="new-password"
                                       aria-describedby="password-requirements" />
                            <button type="button" 
                                    @onclick="() => showPassword = !showPassword" 
                                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus:outline-none"
                                    tabindex="-1"
                                    aria-label="@(showPassword ? "Ocultar contraseña" : "Mostrar contraseña")">
                                @if (showPassword)
                                {
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                }
                            </button>
                        </div>
                        <ValidationMessage For="@(() => model.NewPassword)" class="text-red-600 text-sm mt-1" />
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">
                            Confirmar Contraseña
                        </label>
                        <div class="relative">
                            <InputText id="confirmPassword" 
                                       type="@(showConfirmPassword ? "text" : "password")" 
                                       @bind-Value="model.ConfirmPassword" 
                                       class="form-input pr-10" 
                                       placeholder="••••••••"
                                       autocomplete="new-password" />
                            <button type="button" 
                                    @onclick="() => showConfirmPassword = !showConfirmPassword" 
                                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus:outline-none"
                                    tabindex="-1"
                                    aria-label="@(showConfirmPassword ? "Ocultar contraseña" : "Mostrar contraseña")">
                                @if (showConfirmPassword)
                                {
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                }
                            </button>
                        </div>
                        <ValidationMessage For="@(() => model.ConfirmPassword)" class="text-red-600 text-sm mt-1" />
                    </div>

                    <!-- Password Requirements -->
                    <div id="password-requirements" class="bg-gray-50 rounded-lg p-4 text-sm">
                        <p class="font-medium text-gray-700 mb-2">La contraseña debe contener:</p>
                        <ul class="space-y-1">
                            <li class="flex items-center @(HasMinLength ? "text-green-600" : "text-gray-500")">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    @if (HasMinLength)
                                    {
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    }
                                    else
                                    {
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"/>
                                    }
                                </svg>
                                Mínimo 8 caracteres
                            </li>
                            <li class="flex items-center @(HasUppercase ? "text-green-600" : "text-gray-500")">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    @if (HasUppercase)
                                    {
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    }
                                    else
                                    {
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"/>
                                    }
                                </svg>
                                Una letra mayúscula
                            </li>
                            <li class="flex items-center @(HasLowercase ? "text-green-600" : "text-gray-500")">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    @if (HasLowercase)
                                    {
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    }
                                    else
                                    {
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"/>
                                    }
                                </svg>
                                Una letra minúscula
                            </li>
                            <li class="flex items-center @(HasNumber ? "text-green-600" : "text-gray-500")">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    @if (HasNumber)
                                    {
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    }
                                    else
                                    {
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"/>
                                    }
                                </svg>
                                Un número
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit" 
                            disabled="@(isLoading || !IsPasswordValid)" 
                            class="btn btn-primary w-full flex items-center justify-center disabled:opacity-50 disabled:cursor-not-allowed"
                            aria-busy="@isLoading">
                        @if (isLoading)
                        {
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Cambiando contraseña...</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                            <span>Cambiar Contraseña</span>
                        }
                    </button>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    private ResetPasswordModel model = new();
    private bool isLoading = false;
    private bool isValidating = true;
    private bool isTokenValid = false;
    private bool passwordChanged = false;
    private bool showPassword = false;
    private bool showConfirmPassword = false;
    private string? token;
    private string? maskedEmail;
    private string? tokenError;
    private string? errorMessage;
    private string? successMessage;

    // Password validation properties
    private bool HasMinLength => !string.IsNullOrEmpty(model.NewPassword) && model.NewPassword.Length >= 8;
    private bool HasUppercase => !string.IsNullOrEmpty(model.NewPassword) && model.NewPassword.Any(char.IsUpper);
    private bool HasLowercase => !string.IsNullOrEmpty(model.NewPassword) && model.NewPassword.Any(char.IsLower);
    private bool HasNumber => !string.IsNullOrEmpty(model.NewPassword) && model.NewPassword.Any(char.IsDigit);
    private bool PasswordsMatch => !string.IsNullOrEmpty(model.NewPassword) && model.NewPassword == model.ConfirmPassword;
    private bool IsPasswordValid => HasMinLength && HasUppercase && HasLowercase && HasNumber && PasswordsMatch;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Get token from URL
            token = await JS.InvokeAsync<string>("getUrlParameter", "token");

            if (string.IsNullOrEmpty(token))
            {
                isValidating = false;
                isTokenValid = false;
                tokenError = "No se proporcionó un token de recuperación.";
                StateHasChanged();
                return;
            }

            // Validate token
            var result = await JS.InvokeAsync<ValidateTokenResponse>("validateResetToken", token);

            isValidating = false;
            isTokenValid = result?.IsValid ?? false;
            maskedEmail = result?.MaskedEmail;
            tokenError = result?.ErrorMessage ?? "El enlace de recuperación no es válido o ha expirado.";
            
            StateHasChanged();
        }
    }

    private async Task HandleSubmit()
    {
        if (!IsPasswordValid || string.IsNullOrEmpty(token))
            return;

        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await JS.InvokeAsync<ResetPasswordResponse>("resetPassword", token, model.NewPassword);

            if (result?.Success == true)
            {
                passwordChanged = true;
                successMessage = result.Message;
            }
            else
            {
                errorMessage = result?.Message ?? "Error al cambiar la contraseña.";
            }
        }
        catch (Exception)
        {
            errorMessage = "Error de conexión. Por favor, intente nuevamente.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class ResetPasswordModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "La nueva contraseña es requerida")]
        [System.ComponentModel.DataAnnotations.MinLength(8, ErrorMessage = "La contraseña debe tener al menos 8 caracteres")]
        public string NewPassword { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Debe confirmar la contraseña")]
        [System.ComponentModel.DataAnnotations.Compare(nameof(NewPassword), ErrorMessage = "Las contraseñas no coinciden")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    private class ValidateTokenResponse
    {
        public bool IsValid { get; set; }
        public string? MaskedEmail { get; set; }
        public string? ErrorMessage { get; set; }
    }

    private class ResetPasswordResponse
    {
        public bool Success { get; set; }
        public string? Message { get; set; }
    }
}
