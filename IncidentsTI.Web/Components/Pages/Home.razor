@page "/"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Inicio - Sistema de Gestión de Incidentes TI</PageTitle>

<div class="py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Bienvenido al Sistema de Gestión de Incidentes TI</h1>
        <p class="text-gray-600">Universidad Técnica de Ambato</p>
    </div>

    <AuthorizeView>
        <Authorized>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="card hover:shadow-lg transition cursor-pointer">
                    <div class="card-content">
                        <div class="flex items-center mb-4">
                            <div class="bg-primary text-white p-3 rounded-lg">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                            </div>
                            <h3 class="card-title ml-4">Mis Incidentes</h3>
                        </div>
                        <p class="text-gray-600">Gestiona y da seguimiento a tus incidentes reportados</p>
                        <div class="mt-4">
                            <span class="text-2xl font-bold text-primary">0</span>
                            <span class="text-gray-500 ml-2">activos</span>
                        </div>
                    </div>
                </div>

                <div class="card hover:shadow-lg transition cursor-pointer">
                    <div class="card-content">
                        <div class="flex items-center mb-4">
                            <div class="bg-success text-white p-3 rounded-lg">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h3 class="card-title ml-4">Servicios</h3>
                        </div>
                        <p class="text-gray-600">Explora el catálogo de servicios disponibles</p>
                        <div class="mt-4">
                            <span class="text-2xl font-bold text-success">0</span>
                            <span class="text-gray-500 ml-2">servicios</span>
                        </div>
                    </div>
                </div>

                <div class="card hover:shadow-lg transition cursor-pointer">
                    <div class="card-content">
                        <div class="flex items-center mb-4">
                            <div class="bg-info text-white p-3 rounded-lg">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                </svg>
                            </div>
                            <h3 class="card-title ml-4">Base de Conocimiento</h3>
                        </div>
                        <p class="text-gray-600">Consulta artículos y soluciones comunes</p>
                        <div class="mt-4">
                            <span class="text-2xl font-bold text-info">0</span>
                            <span class="text-gray-500 ml-2">artículos</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-8">
                <div class="card">
                    <div class="card-content">
                        <h3 class="card-title mb-4">Información de Usuario</h3>
                        <AuthorizeView Context="userContext">
                            <Authorized>
                                <dl class="grid grid-cols-2 gap-4">
                                    <div>
                                        <dt class="text-sm font-medium text-gray-500">Usuario</dt>
                                        <dd class="mt-1 text-sm text-gray-900">@userContext.User.Identity?.Name</dd>
                                    </div>
                                    <div>
                                        <dt class="text-sm font-medium text-gray-500">Roles</dt>
                                        <dd class="mt-1 text-sm text-gray-900">
                                            @string.Join(", ", userContext.User.Claims
                                                .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                                .Select(c => GetRoleDisplayName(c.Value)))
                                        </dd>
                                    </div>
                                </dl>
                            </Authorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </Authorized>
    </AuthorizeView>
</div>

@code {
    private string GetRoleDisplayName(string role)
    {
        return role switch
        {
            "Student" => "Estudiante",
            "Teacher" => "Docente",
            "Administrative" => "Administrativo",
            "Technician" => "Técnico",
            "Administrator" => "Administrador",
            _ => role
        };
    }
}
