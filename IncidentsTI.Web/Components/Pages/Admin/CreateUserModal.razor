@using IncidentsTI.Application.DTOs.Users
@using IncidentsTI.Application.Features.Users.Commands
@using IncidentsTI.Domain.Enums
@using MediatR
@inject IMediator Mediator
@inject IToastService ToastService

<div class="p-6 mt-4">
    <EditForm Model="@createUserDto" OnValidSubmit="@HandleCreateUser">
        <DataAnnotationsValidator />
        
        <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label for="firstName" class="form-label">Nombre</label>
                    <InputText id="firstName" @bind-Value="createUserDto.FirstName" class="form-input" />
                    <ValidationMessage For="@(() => createUserDto.FirstName)" class="text-error text-sm mt-1" />
                </div>
                
                <div>
                    <label for="lastName" class="form-label">Apellido</label>
                    <InputText id="lastName" @bind-Value="createUserDto.LastName" class="form-input" />
                    <ValidationMessage For="@(() => createUserDto.LastName)" class="text-error text-sm mt-1" />
                </div>
            </div>

            <div>
                <label for="email" class="form-label">Correo Electrónico</label>
                <InputText id="email" @bind-Value="createUserDto.Email" class="form-input" />
                <ValidationMessage For="@(() => createUserDto.Email)" class="text-error text-sm mt-1" />
            </div>

            <div>
                <label for="password" class="form-label">Contraseña</label>
                <div class="relative">
                    <InputText id="password" type="@(showPassword ? "text" : "password")" @bind-Value="createUserDto.Password" class="form-input pr-10" />
                    <button type="button" @onclick="TogglePasswordVisibility" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700">
                        @if (showPassword)
                        {
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                            </svg>
                        }
                        else
                        {
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                        }
                    </button>
                </div>
                <ValidationMessage For="@(() => createUserDto.Password)" class="text-error text-sm mt-1" />
            </div>

            <div>
                <label for="role" class="form-label">Rol</label>
                <InputSelect id="role" @bind-Value="createUserDto.Role" class="form-input">
                    <option value="">Seleccione un rol</option>
                    <option value="@UserRole.Student">Estudiante</option>
                    <option value="@UserRole.Teacher">Docente</option>
                    <option value="@UserRole.Administrative">Administrativo</option>
                    <option value="@UserRole.Technician">Técnico</option>
                    <option value="@UserRole.Administrator">Administrador</option>
                </InputSelect>
                <ValidationMessage For="@(() => createUserDto.Role)" class="text-error text-sm mt-1" />
            </div>
        </div>

        <div class="flex justify-end space-x-4 mt-6 pt-4 border-t">
            <button type="button" @onclick="Cancel" class="btn btn-secondary">
                Cancelar
            </button>
            <button type="submit" disabled="@isLoading" class="btn btn-primary">
                @if (isLoading)
                {
                    <span>Creando...</span>
                }
                else
                {
                    <span>Crear Usuario</span>
                }
            </button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public EventCallback OnUserCreated { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private CreateUserDto createUserDto = new();
    private bool isLoading = false;
    private bool showPassword = false;

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private async Task HandleCreateUser()
    {
        if (createUserDto == null) return;
        
        isLoading = true;
        try
        {
            var command = new CreateUserCommand
            {
                FirstName = createUserDto.FirstName,
                LastName = createUserDto.LastName,
                Email = createUserDto.Email,
                Password = createUserDto.Password,
                Role = createUserDto.Role
            };

            var result = await Mediator.Send(command);

            if (result != null)
            {
                ToastService.ShowSuccess("Usuario creado exitosamente");
                createUserDto = new(); // Reset form
                await OnUserCreated.InvokeAsync();
            }
            else
            {
                ToastService.ShowError("No se pudo crear el usuario");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error al crear usuario: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task Cancel()
    {
        createUserDto = new(); // Reset form
        await OnCancel.InvokeAsync();
    }
}
